<?xml version="1.0"?>
<odoo>
    <record id="room_booking_view_form_inherit" model="ir.ui.view">
        <field name="name">room.booking.form.inherit</field>
        <field name="model">room.booking</field>
        <field name="inherit_id" ref="room.room_booking_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_title mb-3']" position="before">
                <group>
                    <field name="task_ids" widget="many2many_tags" ></field>
                </group>
            </xpath>
            <!-- <xpath expr="//field[@name='start_datetime']" position="after">
                <group>
                    <field name="label_ids" widget="many2many_tags" readonly="Ture"></field>
                    <field name="date_deadline"></field>
                </group>
            </xpath> -->
        </field>
    </record>

    <record id="project_task_search" model="ir.ui.view">
        <field name="name">project.task.search</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form"/>
        <field name="arch" type="xml">
            <search>
                <group expand="0" string="Group By">
                    <!-- <filter string="Project" name="group_by_project" context="{'group_by': 'project_id'}" /> -->
                    <filter string="Parent" name="group_by_parent" context="{'group_by': 'parent_id'}" />
                </group>
            </search>
        </field>
    </record> 
</odoo>
