<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_order_form_inherit_sub_product" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_template_id']" position="after">
                <field name="is_kit" column_invisible="1"/>
                <button string="Sub Product" name="%(sub_product.action_sub_products)d" type="action" class="oe_highlight" invisible="state == 'sale' or not is_kit"/>
            </xpath>
        </field>
    </record>
</odoo>