<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_kit_form_view" model="ir.ui.view">
        <field name="name">product.template.kit.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_general']" position="inside">
                <field name="is_kit" string="Is a Kit"/>
                <field name="sub_products" widget="many2many_tags" invisible="not is_kit"/>
            </xpath>
        </field>
    </record>
</odoo>
