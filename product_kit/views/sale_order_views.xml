<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_module_name" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit.product.kit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='order_lines']//tree//field[@name='product_template_id']" position="after">
                <button string="Add" 
                        name="product_kit.kit_wizard_action" 
                        type="action" 
                        class="oe_highlight" 
                        invisible="not is_kit or state == 'sale'"
                        context="{'product_name': name}"/>
                <field name="is_kit" column_invisible='1'/>
            </xpath>
            <xpath expr="//group[@name='order_details']" position="inside">
                <field name="print_in_report"/>
            </xpath>
        </field>
    </record>
</odoo>
