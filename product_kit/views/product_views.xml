<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit_sale" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit.product.kit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']//group[1]//group[1]" position="inside">
                <field name="is_kit"/>
                <field name="sub_products_ids" invisible="not is_kit" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>
</odoo>
