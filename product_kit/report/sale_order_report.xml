<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_saleorder_document" name="report_saleorder_document_inherited" inherit_id="sale.report_saleorder_document">
        <xpath expr="//tbody//tr[1]" position="attributes">
            <attribute name="t-if" separator=" " add="(not line.parent_id) or (line.order_id.is_print_sub_products)"/>
        </xpath>
    </template>

    <template id="sale_order_portal_content" name="sale_order_portal_content_inherited" inherit_id="sale.sale_order_portal_content">
        <xpath expr="//tbody[hasclass('sale_tbody')]//tr" position="attributes">
            <attribute name="t-if" separator=" " add="(not line.parent_id) or (line.order_id.is_print_sub_products)"/>
        </xpath>
    </template>
</odoo>
