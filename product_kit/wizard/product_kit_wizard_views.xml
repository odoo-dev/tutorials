<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="kit_wizard_action" model="ir.actions.act_window">
        <field name="name"></field>
        <field name="res_model">kit.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_name': context.get('product_name')}</field>
    </record>

    <record id="kit_wizard_view_form" model="ir.ui.view">
        <field name="name">kit.wizard.view.form</field>
        <field name="model">kit.wizard</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <h2>
                        Product : 
                        <field name="name" readonly='1'/>
                    </h2>
                </header>
                <sheet>
                    <h3>
                        Sub Products
                    </h3>
                    <field name="wizard_product_ids">
                        <tree editable="bottom" create='0'>
                            <field name="product_id" readonly='1'/>
                            <field name="quantity"/>
                            <field name="price"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button string="Confirm" name="add_sub_products_to_sale_order_line" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
