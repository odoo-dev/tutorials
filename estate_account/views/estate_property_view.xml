<?xml version="1.0"?>
<odoo>
    <!--    FORM VIEW-->
    <record id="estate_property_view_form_inherited_estate_account" model="ir.ui.view">
        <field name="name">estate.property.view.form.inherited.estate.account</field>
        <field name="model">estate.property</field>
        <field name="inherit_id" ref="estate.estate_property_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_title']" position="before">
                <div class="oe_button_box" name="button_box">
                    <button name="action_view_invoice_from_property" type="object" class="oe_stat_button" icon="fa-pencil-square-o" invisible="not invoice_id">
                        <span>Invoice</span>
                    </button>
                </div>
            </xpath>
        </field>
    </record>

<!--    <field name="invoice_id" widget="many2one"/>-->
</odoo>
