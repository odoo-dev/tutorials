<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <!-- <field name="implied_ids" eval="[(4, (ref('estate.estate_group_user')))]"/> -->
        <field name="users" eval="[(4,(ref('base.user_admin')))]"/>
    </record>

    <record id="access_property_rule" model="ir.rule">
        <field name="name">Limit agents to properties they manage or unassigned properties</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
        <field name="groups" eval="[(4, (ref('estate.estate_group_user')))]"/>
        <field name="domain_force">['|', '|', ('sales_person_id', '=', user.id), ('sales_person_id', '=', False), (]</field>
    </record>
</odoo>