<odoo>
<data>
    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
    </record>

     <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage" />
        <field name="implied_ids" eval="[ref('estate.estate_group_user')]"/>
    </record>

    <record id="estate_agent_record_rule" model="ir.rule">
        <field name="name">Estate agent record rule</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="groups" eval="[Command.link(ref('estate_group_user'))]"/>
        <field name="domain_force">['|', ('seller_id', '=', False), ('seller_id', '=', user.id), ('company_id', 'in', user.company_ids.ids)]</field>
    </record>

    <record id="estate_agent_type_record_rule" model="ir.rule">
        <field name="name">Agents cant see estate property types</field>
        <field name="model_id" ref="estate_property_type_action"/>
        <field name="groups" eval="[Command.link(ref('estate.estate_group_user'))]"/>
        <field name="domain_force">[(0,'=',1)]</field>
    </record>

    <record id="estate_manager_record_rule" model="ir.rule">
        <field name="name">Estate manager record rule</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="groups" eval="[Command.link(ref('estate.estate_group_manager'))]"/>
        <field name="domain_force">[(1,'=',1)]</field>
    </record>
</data>
</odoo>