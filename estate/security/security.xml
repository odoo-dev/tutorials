<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="base.module_category_real_estate_brokerage" model="ir.module.category">
        <field name="description">Helps you manage your Agents.</field>
    </record>

    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage" />
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage" />
        <field name="implied_ids" eval="[(ref('estate.estate_group_user'))]" />
    </record>

    <!-- Rule for agents to only see or modify properties of their own company -->
    <record id="agent_estate_rule" model="ir.rule">
        <field name="name">Rule for agents to only see or modify their own properties</field>
        <field name="model_id" ref="estate.model_estate_property" />
        <field name="groups" eval="[Command.link(ref('estate.estate_group_user'))]" />
        <field name="domain_force">[
            '|', ('salesman', '=', user.id),
            ('salesman', '=', False),
            ('company_id', '=', user.company_id.id)]</field>
    </record>

    <record id="manager_estate_rule" model="ir.rule">
        <field name="name">Rule for managers to see all properties</field>
        <field name="model_id" ref="estate.model_estate_property" />
        <field name="groups" eval="[Command.link(ref('estate.estate_group_manager'))]" />
        <field name="domain_force">[]</field>
    </record>
</odoo>