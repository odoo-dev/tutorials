<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[(ref('estate_group_user'))]" />
    </record>

    <record id="record_rule_estate_group_user" model="ir.rule">
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="name">Agent Record Roolz</field>
        <field name="perm_write" eval="False" />
        <field name="perm_read" eval="True" />
        <field name="groups" eval="[Command.link(ref('estate.estate_group_user'))]" />
        <field name="domain_force">[
            '|', ('seller_id', '=', user.id),
                 ('seller_id', '=', False),
                 ('company_id', 'in', user.company_ids.ids)
        ]</field>
    </record>

    <record id="record_rule_estate_group_manager" model="ir.rule">
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="name">Manager Record Roolz</field>
        <field name="perm_write" eval="True" />
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="True" />
        <field name="perm_unlink" eval="True" />
        <field name="groups" eval="[Command.link(ref('estate.estate_group_manager'))]" />
        <field name="domain_force">[]</field>
    </record>

   

</odoo>
