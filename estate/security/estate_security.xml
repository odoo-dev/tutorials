<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="estate_property_rule_agent" model="ir.rule">
        <field name="name">limits agents to only being able to see or modify properties which have no salesperson, or for which they are the salesperson.</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="groups" eval="[(4, ref('estate.estate_group_user'))]"/>
        <field name="domain_force">
            [
                '|', 
                ('user_id', '=', user.id),
                ('user_id', '=', False)
            ]
        </field>
    </record>
    <record id="estate_property_rule_manager" model="ir.rule">
        <field name="name">do not make limis to managers.</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="groups" eval="[(4, ref('estate.estate_group_manager'))]"/>
        <field name="domain_force">
            [
                (1, '=', 1),
            ]
        </field>
    </record>

    <record id="estate_property_rule_company" model="ir.rule">
        <field name="name">Estate Property multi-company</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="domain_force">
            [
                '|', 
                ('company_id', '=', False),
                ('company_id', 'in', company_ids)
            ]
        </field>
    </record>
</odoo>