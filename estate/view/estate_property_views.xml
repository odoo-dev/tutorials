<odoo>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{'search_default_available': True, 'search_default_current': True}</field>


        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data found!
            </p>
            <p>
                Use this menu to have an overview of your Pipeline.
            </p>
        </field>
    </record>


    <record id="action_account_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree sample="1" decoration-success="state in ('offer_received','offer_accepted')"
                decoration-bf="state in ('offer_accepted')" decoration-muted="state in ('sold')">
                <header>
                    <button string="Add offer" name="%(estate.add_offer_action)d" type="action" />
                    <button string="Draft" name="add_properties_draft" type="object" />
                </header>
                <field name='sequence' widget='handle' />
                <field name="name" string="Title" />
                <field name="state" invisible="1" />
                <field name="property_type" string="Property Type" />
                <field name="postcode" />
                <field name="tag_ids" widget="many2many_tags" options="{'color_field':'color'}"
                    string="Tags" />
                <field name="bedrooms" />
                <field name="livingArea" string="Living Area(sqm)" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" string="Available From" optional="1" />

            </tree>
        </field>
    </record>

    <!--FORM
    VIEW-___-->

    <record id="action_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="description">
                <header>
                    <button name="button_action_sold" type="object" string="Sold"
                        invisible="state in ('canceled', 'sold')" />
                    <button name="button_action_cancled" type="object" string="Cancle"
                        invisible="state in ('canceled', 'sold')" />
                    <field name="state" widget="statusbar"
                        statusbar_visible="new,offer_received,offer_accepted,sold" />
                </header>
                <sheet>
                    <div>
                        <h1>
                            <field name="name" />
                        </h1>

                        <field name="tag_ids" widget="many2many_tags"
                            options="{'color_field':'color'}" />
                        <field name="image" widget="image" class="oe_avatar" />

                    </div>
                    <group>
                        <group>
                            <field name="state" string="Status" />
                            <field name="property_type" options="{'no_create': true}" />
                            <field name="postcode" class="o_stat_value" />
                            <field name="company_id" string="Your Company" />
                            <field name="expected_price" />
                            <field name="best_offer" />
                        </group>
                        <group>
                            <field name="date_availability" string="Available From" />

                            <field name="selling_price" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" />

                                <field name="bedrooms" />

                                <field name="livingArea" string="Living Area(sqm)" />

                                <field name="facades" />

                                <field name="garden" />

                                <field name="garden_area" string="Garden Area(sqm)"
                                    invisible="not garden" />

                                <field name="garden_orientation" invisible="not garden" />

                                <field name="total_area" invisible="not garden" />

                            </group>

                        </page>

                        <page name="Other info">
                            <group>
                                <field name="salesperson_id" />
                                <field name="buyer_id" />
                            </group>
                        </page>

                        <page string="Offers">
                            <field name="offer_ids"
                                readonly="state in ('offer_accepted', 'sold', 'canceled')" />

                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                    <field name="activity_ids" />
                </div>
            </form>

        </field>
    </record>


    <!--SEARCH
    VIEW-->
    <record id="action_search_estate_property" model="ir.ui.view">
        <field name="name"> state.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Property">
                <field name="name" string="Title" />
                <field name="property_type" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="livingArea" string="Living Area Greater Than"
                    filter_domain="[('livingArea', '>=', self)]" />
                <field name="livingArea" />
                <field name="facades" />
                <separator />
                <!-- <filter string="Active" name="active" domain="[('active', '=', True)]"/> -->
                <filter string="Available" name="available"
                    domain="['|',('state', '=', 'new'),('state', '=', 'offer_received')]" />

                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban view -->
    <record id="actionestate_property_kanban_view" model="ir.ui.view">
        <field name="name">estate.property.action.kanban.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type" records_draggable="false">
                <field name="state" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong>
                                <field name="name" />
                            </strong>
                            <div>
                                <span>Expected Price: </span>
                                <field name="expected_price" />
                            </div>
                            <div>
                                <field name="tag_ids" widget="many2many_tags"
                                    options="{'color_field':'color'}" />
                            </div>
                            <div>
                                <t t-if="record.state.raw_value == 'offer_received'">

                                    <strong>Best Price: </strong>
                                    <field name="best_offer" />
                                </t>
                            </div>
                            <div>
                                <t t-if="record.state.raw_value == 'offer_accepted'">

                                    <strong>Selling Price: </strong>
                                    <field name="selling_price" />
                                </t>
                            </div>

                        </div>

                    </t>
                </templates>
            </kanban>
        </field>
    </record>


</odoo>