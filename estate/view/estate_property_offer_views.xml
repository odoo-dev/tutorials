<odoo>
    <record id="action_account_estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree sample="1" editable="bottom" decoration-success="status in ('accepted')"
                decoration-danger="status in ('refused')">

                <field name='sequence' widget='handle'  />
                <field name='price' />
                <field name='partner_id' />
                <field name="validity" />
                <field name="date_deadline" />
                <button name="action_confirm" type="object" title="confirm" icon="fa-check"
                    invisible="status in ('accepted', 'refused')" />
                <button name="action_refused" type="object" title="refused" icon="fa-times"
                    invisible="status in ('accepted', 'refused')" />

                <field name='status' invisible="status in ('accepted', 'refused')" />
            </tree>
        </field>
    </record>


    <record id="action_account_estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer_form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name='price' />
                        <field name='partner_id' />
                        <field name="validity" />
                        <field name="date_deadline" />
                        <field name='status' />

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_offer_check" model="ir.actions.act_window">
        <field name="name">Estate Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>
</odoo>