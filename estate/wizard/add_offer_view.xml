<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--Form view-->
    <record id="add_offer_view" model="ir.ui.view">
        <field name="name">estate.add.offer.view</field>
        <field name="model">estate.add.offer</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="buyer_id"/>
                    <field name="price"/>
                    <field name="validity"/>
                </group>
                <footer>
                    <button name="action_add_offer" string="save" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!--Actions-->
    <record id="action_add_offer_view" model="ir.actions.act_window">
        <field name="name">Add Offer</field>
        <field name="res_model">estate.add.offer</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_estate_property"/>
        <field name="view_id" ref="add_offer_view"></field>
    </record>
</odoo>