<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_add_offer_action" model="ir.actions.act_window">
        <field name="name">estate.property.add.offer.wizard.action</field>
        <field name="res_model">add.offer.wizard</field>
        <field name="view_mode">form</field>
        <field name="context">{'active_ids': active_ids}</field>
        <field name="target">new</field>
    </record>
    
    <record id="add_offer_wizard_view_form" model="ir.ui.view">
        <field name="name">estate.add.offer.wizard.view.form</field>
        <field name="model">add.offer.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Offer">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="status"/>
                        <field name="partner_id"/>
                    </group>
                    <footer>
                        <button type="object" name="make_an_offer" string="Add Offer" class="btn-primary"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
