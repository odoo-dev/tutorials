<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="res_users_report_template">
        <t t-foreach="docs" t-as="user">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <t t-call="estate.company_details_template">
                            <t t-set="company" t-value="user.company_id" />
                        </t>
                        <br />
                        <br />
                        <h2>
                            <div>
                                <strong>Salesman: </strong>
                                <span t-field="user.name" />
                            </div>
                        </h2>
                        <div>

                        <t t-foreach="user.mapped('property_ids')" t-as="property">
                                <h3>
                                    <span t-field="property.name" />
                                </h3>
                                <h5>
                                    <strong>Expected Price: </strong>
                                    <span t-field="property.expected_price" />
                                </h5>
                                <h5>
                                    <strong>State : </strong>
                                    <span t-field="property.state" />
                                </h5>
                                <t t-call="estate.offers_template_">
                                    <t t-set="offers"
                                        t-value="property.mapped('offer_ids')" />
                                </t>
                         </t>       


                        </div>

                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>