            <div class="page">
                <h2>Properties for: <span t-field="doc.name" /></h2>
                <t t-foreach="doc.property_ids" t-as="property">
                    <div>
                        <h3>
                            <t t-field="property.name" />
                        </h3>
                        <p>Expected Price: <t t-field="property.expected_price" /> â‚¬</p>
                        <p>Status: <t t-field="property.state" /></p>
                        <t t-call="estate.offers_table" />
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>