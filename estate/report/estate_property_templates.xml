<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="estate_property_report_template">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <t t-call="estate.company_details_template">
                            <t t-set="company" t-value="property.user_id.company_id" />
                        </t>
                        <br/>
                        <br/>
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                        <div>
                            <strong>Salesman: </strong>
                            <span t-field="property.user_id"/>
                        </div>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                        </div>
                        <div id="status">
                            <strong>State : </strong>
                            <span t-field="property.state"/>
                        </div>
                
                        <t t-call="estate.offers_template_">
                            <t t-set="offers" t-value="offers or property.mapped('offer_ids')" />
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>