<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_property_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 style="margin-bottom: 10px;">Property: <span t-field="doc.name" /></h2>
                        <p>
                            <strong>Salesman:</strong>
                            <span t-field="doc.salesman" />
                            <br />
                            <strong>Expected
                                Price:</strong>
                            <span t-field="doc.expected_price" />
                            <br />
                            <strong>
                                Status:</strong>
                            <span t-field="doc.state" />
                        </p>
                        <t t-if="doc.offer_ids">
                            <t t-call="estate.offers_table"> </t>
                        </t>
                        <t t-else="">
                            <p>No offers yet for this property.</p>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>