<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="property_offers_table">
        <div>
            <table class="table" t-if="property.property_offer_ids">
                <thead>
                    <tr>
                        <th>Buyer</th>
                        <th>Price</th>
                        <th>Validity</th>
                        <th>Deadline</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="offers" t-value="property.mapped('property_offer_ids')"/>
                    <tr t-foreach="offers" t-as="offer">
                        <td>
                            <span t-field="offer.partner_id"/>
                        </td>
                        <td>
                            <span t-field="offer.price"/>
                        </td>
                        <td>
                            <span t-field="offer.validity"/>
                        </td>
                        <td>
                            <span t-field="offer.date_deadline"/>
                        </td>
                        <td>
                            <span t-field="offer.status"/>
                        </td>
                        
                    </tr>
                </tbody>
            </table>
            <div t-else="">
                <p>
                    There is no offer for this property yet.
                </p>
            </div>
        </div>
    </template>

    <template id="report_property_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                        <div id="details">
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                        </div>
                        <t t-call="estate.property_offers_table">
                            <t t-set="property" t-value="property"/>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>