<odoo>
    <data>
        <template id="report_users_properties">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="company-info" style="text-align: left;">
                        <img t-att-src="'/web/image/res.company/' + str(user.company_id.id) + '/logo'" alt="Company Logo" style="width: 150px;"/>
                        <h2>Your Company</h2>
                        <p>250 Executive Park Blvd, Suite 3400</p>
                        <p>San Francisco, CA 94134</p>
                        <p>United States</p>
                    </div>

                    <h1>Properties for <span t-field="user.name"/></h1>

                    <t t-foreach="user.property_ids" t-as="property">
                        <div class="property-details" style="margin-top: 20px;">
                            <h2 t-field="property.name"/>
                            <p><strong>Expected Price:</strong> <span t-field="property.expected_price"/></p>
                            <p><strong>Status:</strong> <span t-field="property.state"/></p>
                        </div>

                        <t t-set="doc" t-value="property"/>
                        <t t-call="report_offers_table"/>
                    </t>
                </div>
            </t>
        </template>
    </data>
</odoo>
