<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- property tags -->
    <record id="property_tag_cozy" model="estate.property.tags">
        <field name="name">Cozy</field>
    </record>
    <record id="property_tag_modern" model="estate.property.tags">
        <field name="name">Modern</field>
    </record>
    <record id="property_tag_balcony" model="estate.property.tags">
        <field name="name">Balcony</field>
    </record>
    <record id="property_tag_ocean_view" model="estate.property.tags">
        <field name="name">Ocean View</field>
    </record>
    <record id="property_tag_terrace" model="estate.property.tags">
        <field name="name">Terrace</field>
    </record>

    <!-- properties -->
    <record id="property_one" model="estate.property">
        <field name="name">Big Villa</field>
        <field name="state">new</field>
        <field name="description">A nice and big villa</field>
        <field name="postcode">12345</field>
        <field name="date_availability">2020-02-02</field>
        <field name="expected_price">1600000</field>
        <field name="bedrooms">6</field>
        <field name="living_area">100</field>
        <field name="facades">4</field>
        <field name="garage">True</field>
        <field name="garden">True</field>
        <field name="garden_area">100000</field>
        <field name="garden_orientation">south</field>
        <field name="property_type_id" ref="property_resi" />
        <field name="tag_ids"
            eval="[(6, 0, [ref('property_tag_ocean_view'), ref('property_tag_terrace')])]" />
    </record>

    <record id="property_two" model="estate.property">
        <field name="name">Trailer Home</field>
        <field name="state">new</field>
        <field name="description">Home in a trailer park</field>
        <field name="postcode">54321</field>
        <field name="date_availability">1970-01-01</field>
        <field name="expected_price">100000</field>
        <field name="selling_price">120000</field>
        <field name="bedrooms">1</field>
        <field name="living_area">10</field>
        <field name="facades">4</field>
        <field name="garage">False</field>
        <field name="property_type_id" ref="property_resi" />
        <field name="tag_ids"
            eval="[(6, 0, [ref('property_tag_cozy'), ref('property_tag_ocean_view')])]" />
    </record>

    <record id="property_three" model="estate.property">
        <field name="name">Spacious Apartment</field>
        <field name="state">new</field>
        <field name="description">A spacious and modern apartment</field>
        <field name="postcode">67890</field>
        <field name="date_availability">2023-05-15</field>
        <field name="expected_price">300000</field>
        <field name="bedrooms">3</field>
        <field name="living_area">150</field>
        <field name="facades">2</field>
        <field name="garage">True</field>
        <field name="garden">False</field>
        <field name="property_type_id" ref="property_resi" />
        <field name="tag_ids"
            eval="[(6, 0, [ref('property_tag_modern'), ref('property_tag_balcony')])]" />
    </record>

    <record id="property_four" model="estate.property">
        <field name="name">Office Building</field>
        <field name="state">new</field>
        <field name="description">A modern office building</field>
        <field name="postcode">45678</field>
        <field name="date_availability">2023-09-30</field>
        <field name="expected_price">1000000</field>
        <field name="living_area">500</field>
        <field name="facades">1</field>
        <field name="garage">False</field>
        <field name="garden">False</field>
        <field name="property_type_id" ref="property_comm" />
        <field name="tag_ids"
            eval="[(6, 0, [ref('property_tag_modern'), ref('property_tag_ocean_view')])]" />
    </record>

    <!-- property offers -->
    <record id="property_offer_one" model="estate.property.offer">
        <field name="price">500000.0</field>
        <field name="partner_id" ref="base.res_partner_3" />
        <field name="property_id" ref="property_one" />
        <field name="date_deadline">2024-08-01</field>
        <field name="validity">10</field>
    </record>

    <record id="property_offer_two" model="estate.property.offer">
        <field name="price">350000.0</field>
        <field name="partner_id" ref="base.res_partner_4" />
        <field name="property_id" ref="property_two" />
        <field name="date_deadline">2024-08-15</field>
        <field name="validity">10</field>
    </record>

    <record id="property_offer_three" model="estate.property.offer">
        <field name="price">650000.0</field>
        <field name="partner_id" ref="base.res_partner_3" />
        <field name="property_id" ref="property_three" />
        <field name="date_deadline">2024-08-20</field>
        <field name="validity">10</field>
    </record>

    <record id="property_offer_four" model="estate.property.offer">
        <field name="price">450000.0</field>
        <field name="partner_id" ref="base.res_partner_4" />
        <field name="property_id" ref="property_four" />
        <field name="date_deadline">2024-08-25</field>
        <field name="validity">10</field>
    </record>
</odoo>
