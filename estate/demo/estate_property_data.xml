<odoo>
<data noupdate='1'>
    <record id = "id" model="estate.property">
        <field name="name">Big Villa</field>
        <field name="state">new</field>
        <field name="description">A nice and big villa</field>
        <field name="postcode">12345</field>
        <field name="expected_price">1600000</field>
        <field name="selling_price">12000000</field>
        <field name="bedrooms">2</field>
        <field name="living_area">10</field>
        <field name="facades">4</field>
        <field name="image" type="base64" file="estate/static/src/img/bigvilla.webp"/>
        <field name="garage">True</field>
        <field name="garden">True</field>
        <field name="garden_area">100000</field>
        <field name="garden_orientation">south</field>
        <field name="property_type_id" ref="estate.1"/>
    </record>

    <record id = "id2" model="estate.property">
        <field name="name">Trailer home</field>
        <field name="state">cancelled</field>
        <field name="description">Home in a trailer park</field>
        <field name="postcode">54321</field>
        <field name="expected_price">100000</field>
        <field name="selling_price">120000</field>
        <field name="bedrooms">1</field>
        <field name="living_area">10</field>
        <field name="facades">4</field>
        <field name="image" type="base64" file="estate/static/src/img/trailerhome.jpg"/>
        <field name="garage">False</field>
        <field name="property_type_id" ref="estate.1"/>
    </record>

    <record id="id3" model="estate.property">
        <field name="name">Pent house</field>
        <field name="state">new</field>
        <field name="description">airy home</field>
        <field name="postcode">54321</field>
        <field name="expected_price">100000</field>
        <field name="selling_price">120000</field>
        <field name="bedrooms">2</field>
        <field name="living_area">10</field>
        <field name="facades">4</field>
        <field name="image" type="base64" file="estate/static/src/img/penthouse.jpg"/>
        <field name="garage">False</field>
        <field name="property_type_id" ref="estate.1"/>
        <field name="offer_ids" eval="[
            Command.create({'partner_id': ref('base.res_partner_12') , 'price':12345567, 'validity':10}),
            Command.create({'partner_id': ref('base.res_partner_12') , 'price':123455678, 'validity':11}),
            Command.create({'partner_id': ref('base.res_partner_12') , 'price':123455679, 'validity':12})]"/>
    </record>

    <record id="offer2" model="estate.property.offer">
            <field name="partner_id" ref="base.res_partner_12"/>
            <field name="property_id" ref="estate.id"/>
            <field name="price">1500000</field>
            <field name="validity">14</field>
    </record>

    <record id="offer3" model="estate.property.offer">
            <field name="partner_id" ref="base.res_partner_12"/>
            <field name="property_id" ref="estate.id"/>
            <field name="price">1500001</field>
            <field name="validity">14</field>
    </record>

    <record id="offer1" model="estate.property.offer">
            <field name="partner_id" ref="base.res_partner_12"/>
            <field name="property_id" ref="estate.id"/>
            <field name="price">100000000</field>
            <field name="validity">14</field>
    </record>

    <function model="estate.property.offer" name="action_offer_accept">
        <value eval="[ref('offer1')]"/>
    </function>

    <function name='action_offer_refuse' model="estate.property.offer">
        <value eval="[ref('offer2'), ref('offer3')]"/>
    </function>
</data>
</odoo>
