<odoo>
    <record id="estate_property_offer_data_1" model="estate.property.offer">
        <field name="price">1600000</field>
        <!-- <field name="validity">14</field> -->
        <field name="partner_id" ref="base.res_partner_2" />
        <field name="property_id" ref="estate_property_data_1" />
        <field name="date_deadline" eval="datetime.now() + timedelta(days=14)" />
    </record>

    <record id="estate_property_offer_data_2" model="estate.property.offer">
        <field name="price">1800000</field>
        <field name="validity">14</field>
        <field name="partner_id" ref="base.res_partner_3" />
        <field name="property_id" ref="estate_property_data_1" />
    </record>
    <record id="estate_property_offer_data_3" model="estate.property.offer">
        <field name="price">2000000</field>
        <field name="validity">14</field>
        <field name="partner_id" ref="base.res_partner_4" />
        <field name="property_id" ref="estate_property_data_1" />
    </record>
    <function model="estate.property.offer" name="action_accept_offer" eval="[ref('estate_property_offer_data_3')]" />
    <function model="estate.property.offer" name="action_reject_offer" eval="[ref('estate_property_offer_data_2')]" />
    <function model="estate.property.offer" name="action_reject_offer" eval="[ref('estate_property_offer_data_1')]" />
</odoo>