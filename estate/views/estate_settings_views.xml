<odoo>
   <record id="estate_settings_action" model="ir.actions.act_window">
    <field name="name">Settings</field>
    <field name="res_model">estate.settings</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="estate_settings_form_view"/>
   </record>
   <record id="estate_settings_form_view" model="ir.ui.view">
    <field name="name">estate.settings.form</field>
    <field name="model">estate.settings</field>
    <field name="arch" type="xml">
        <form string="Estate Settings">
            <sheet>
                <group>
                    <field name="default_property_type"/>
                    <field name="enable_notifications"/>
                </group>
            </sheet>
        </form>
    </field>
  </record>
</odoo>