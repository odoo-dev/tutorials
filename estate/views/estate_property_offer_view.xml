<odoo>
    <record id="estate_property_offer_view" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- list of the form -->
    <record id="estate_property_offer_list_view" model="ir.ui.view">
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="lists" editable="bottom" decoration-danger="state=='refused'"
            decoration-success="state=='accepted'">
                <field name="price" string="Price" width="100" />
                <field name="date_deadline" string="Date Deadline" width="170" />
                <field name="validity" string="Validity (days)" width="170" />
                <button title="accept_button" name="action_do_accept" type="object" icon="fa-check"
                    invisible="state in ['accepted','refused']" />
                <button title="refuse_button" name="action_do_refuse" type="object" icon="fa-times"
                    invisible="state in ['accepted','refused']"/>
            </list>
        </field>
    </record>
</odoo>