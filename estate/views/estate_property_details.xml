<odoo>
    <odoo>
        <template id="estate_property_detail_view_id" name="Property Details">
            <t t-call="website.layout">
                <div class="container py-5">
                    <div class="row">
                        <div class="col-md-6">
                            <img
                                t-att-src="'/web/image/estate.property/' + str(property.id) + '/' + 'image'"
                                alt="Property Image"
                                class="img-fluid mb-4"
                                style="object-fit: cover; height: 400px;" />
                        </div>
                        <div class="col-md-6">
                            <h2 class="text-primary">
                                <t t-esc="property.name" />
                            </h2>
                            <p><strong>Price:</strong> <t t-esc="property.expected_price" /> USD</p>
                            <p>
                                <strong>Description:</strong>
                                <t t-esc="property.description" />
                            </p>
                            <p>
                                <strong>Bedrooms:</strong>
                                <t t-esc="property.bedrooms" />
                            </p>
                            <p>
                                <strong>Living Area:</strong>
                                <t t-esc="property.living_area" />
                            </p>
                            <p>
                                <strong>Facades:</strong>
                                <t t-esc="property.facades" />
                            </p>
                        </div>
                    </div>
                    <div class="text-center mt-4">
                        <a href="/estate_website_properties" class="btn btn-secondary">Back to
                            Listings</a>
                    </div>
                </div>
            </t>
        </template>
    </odoo>

</odoo>