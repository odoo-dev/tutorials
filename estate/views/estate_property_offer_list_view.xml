<odoo>
    <record id="estate_property_offer_list_view" model="ir.ui.view">
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="lists" editable="bottom" decoration-danger="status=='refused'"
            decoration-success="status=='accepted'">
                <field name="price" string="Price" width="100" />
                <field name="date_deadline" string="Date Deadline" width="170" />
                <field name="validity" string="Validity (days)" width="170" />
                <button title="accept_button" name="action_do_accept" type="object" icon="fa-check"
                    invisible="status in ['accepted','refused']" />
                <button title="refuse_button" name="action_do_refuse" type="object" icon="fa-times"
                    invisible="status in ['accepted','refused']"/>
              
            </list>
        </field>
    </record>
</odoo>
