<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">ep_offer.view.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Property offer">
                <field name="partner_id"/>
                <field name="price"/>
                <field name="state"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_accept" string="Accept" type="object" icon="fa-check"/>
                <button name="action_refuse" string="Refuse" type="object" icon="fa-times"/>
            </list>
        </field>
    </record>
    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">ep_offer.view.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property offer">
                <sheet>
                    <group>
                        <!--field name="property_id" string="Property"/-->
                        <field name="partner_id"/>
                        <field name="price"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
