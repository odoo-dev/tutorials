<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_tag_view_search" model="ir.ui.view">
        <field name="name">estate.property.tag.view.search</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <search string="Search Tags">
                <field name="name"/>

                <separator/>
                <filter string="Include Inactives" name="active_and_inactive" domain="['|', ('active', '=', True), ('active', '=', False)]"/>
                <filter string="Inactives" name="inactive" domain="[('active', '=', False)]"/>

                <group expand="0" string="Group By">
                    <filter string="Active" name="groupby_active" context="{'group_by': 'active'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="estate_property_tag_view_form" model="ir.ui.view">
        <field name="name">estate.property.tag.view.form</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <form string="Property Tag">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                    <div class="row">
                        <div class="oe_title col-9">
                            <h1>
                                <field name="name"/>
                            </h1>
                            <group>
                                <field name="color" widget="color_picker"/>
                                <field name="active"/>
                            </group>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_tag_view_list" model="ir.ui.view">
        <field name="name">estate.property.tag.list</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <list string="List" editable="bottom">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="estate_property_tag_model_action" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
