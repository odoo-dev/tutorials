<?xml version="1.0"?>
<odoo>
    <record id="estate_property_offers_action" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">estate.property.offers</field>
    </record> 

    <record id="estate_property_offers_view_list" model="ir.ui.view">
        <field name="name">estate.property.offers.list</field>
        <field name="model">estate.property.offers</field>
        <field name="arch" type="xml">
            <list string="Offers">
                <field name="price" />
                <field name="partner_id" />
                <field name="status" />
            </list>
        </field>
    </record>

    <record id="estate_property_offers_view_form" model="ir.ui.view"> 
        <field name="name">estate.property.offers.form</field>
        <field name="model">estate.property.offers</field>
        <field name="arch" type="xml"> 
            <form>
                <sheet>
                    <h1>
                        <field name="name" string="Label" placeholder="e.g. appartment" />
                    </h1>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
