<odoo>
    <!-- Define a List View for Estate Properties -->
    <record id="view_estate_property_offers_tree" model="ir.ui.view">
        <field name="name">estate.property.offers.tree</field>
        <field name="model">estate.property.offers</field>
        <field name="arch" type="xml">
            <list>
                <field name="price" />
                <field name="partner_id" />
                <field name="date_deadline" />
                <field name="validity" />
                <button name="action_confirm" string="Accept" type="object" icon="fa-check"
                    invisible="property_state != 'offer_received' or status in ['accepted','refused']"
                />
                <button name="action_cancel" string="Refuse" type="object" icon="fa-times"
                    invisible="property_state != 'offer_received' or status in ['refused','accepted']"
                />
                <field name="status" />
            </list>
        </field>
    </record>

    <!-- Define a Form View for Estate Properties -->
    <record id="view_estate_property_offers_form" model="ir.ui.view">
        <field name="name">estate.property.offers.tree</field>
        <field name="model">estate.property.offers</field>
        <field name="arch" type="xml">
            <form string="Test">
                <sheet>
                    <group>
                        <field name="price" />
                        <field name="partner_id" />
                        <field name="date_deadline" />
                        <field name="validity" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>