<?xml version="1.0"?>
<odoo>
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>

    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate_property_offer_tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Property Offers List View" editable="bottom" decoration-success="status=='accepted'" decoration-warning="status=='refused'">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="accept_offer" string="Accept" type="object" icon="fa-check" invisible="status"/>
                <button name="refuse_offer" string="Refuse" type="object" icon="fa-times" invisible="status"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate_property_offer_form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property Offers Form View">
                <sheet>
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                    <field name="status"/>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
