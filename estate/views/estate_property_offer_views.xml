<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No OPffers are found!
                <p></p>
                Add the offers first.
            </p>
        </field>
    </record>


    <record id="view_estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree editable="bottom" string="Property Offers" decoration-success="status in ('accepted')" decoration-danger="status in ('refused')">
                <field name="price"/>
                <field name="partner_id" string="Partner"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <field name="status" string="Status"/>
            </tree>
        </field>
    </record>
</odoo>


