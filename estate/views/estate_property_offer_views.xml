<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <!-- Estate/Property/Offers List-->
    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Offers list">
                <field name="price" string="Price" widget="text"/>
                <field name="partner_id" string="Partner"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="accept_offer" type="object" icon="fa-check" title="Accept Offer"/>
                <button name="reject_offer" type="object" icon="fa-times" title="Reject Offer"/>
                <field name="status" string="Status" widget="text"/>
            </list>
        </field>
    </record>

    <!-- Estate/Property/Offers Form-->
    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Offers">
                <group>
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                    <field name="status"/>
                </group>
            </form>
        </field>
    </record>
</odoo>