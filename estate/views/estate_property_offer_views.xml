<?xml version="1.0"?>
<odoo>
    <record id="estate_offers_model_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="domain">[('property_id', '=', active_id)]</field>
    </record>
     <record id="estate_property__offers_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offers.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list decoration-danger="status=='refused'" decoration-success="status=='accepted'" string="Channel">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline" string="Deadline" />
            </list>
        </field>
    </record>
</odoo>
