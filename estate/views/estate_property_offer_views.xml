<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="property_offers" decoration-danger="status == 'refused'" decoration-success="status == 'accepted'" >
                <field name="price"></field>
                <field name="partner_id"></field>
                <field name="validity"></field>
                <field name="date_deadline"></field>
            </list>
        </field>
    </record>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property Offers">
                <group>
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="property_id" readonly='1'/>
                    <field name="status" readonly='1'/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                </group>
            </form>
        </field>
    </record>
</odoo>