<odoo>

    <!-- Define a List View for Estate Properties -->
    <record id="view_estate_property_tags_tree" model="ir.ui.view">
        <field name="name">estate.property.tags.tree</field>
        <field name="model">estate.property.tags</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Define a Form View for Estate Properties -->
    <record id="view_estate_property_tags_form" model="ir.ui.view">
        <field name="name">estate.property.tags.tree</field>
        <field name="model">estate.property.tags</field>
        <field name="arch" type="xml">
            <form string="Test">
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Define a Search, GroupBy, and Filter View for Estate Properties -->
    <record id="view_estate_property_tags_search" model="ir.ui.view">
        <field name="name">estate.property.tags.search</field>
        <field name="model">estate.property.tags</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="name"/>
            </search>
        </field>
    </record>
</odoo>