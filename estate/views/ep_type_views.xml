<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="act_estate_property_type" model="ir.actions.act_window">
        <field name="name">Property types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="ep_type_view_list" model="ir.ui.view">
        <field name="name">ep_type.view.list</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <list string="Property type">
                <field name="name" string="Title"/>
            </list>
        </field>
    </record>
    <record id="ep_type_view_form" model="ir.ui.view">
        <field name="name">ep_type.view.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Property type">
                <sheet>
                    <!-- IDK how to style the title to look title-ish from here -->
                    <field name="name" string="Title" placeholder="New property type"/>
                    <group>
                        <field name="description" string="Description" placeholder="Enter description here..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>