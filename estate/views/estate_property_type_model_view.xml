<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--Actions-->
    <record id='view_property_type' model="ir.actions.act_window">
        <field name="name">Property Types</field> 
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field> 
    </record>

    <!--Tree View-->
    <record id="property_type_tree_view" model="ir.ui.view">
        <field name="name">property.type.tree.view</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <!--Form view-->
    <record id="estate_property_type_form_view" model="ir.ui.view">
        <field name="name">estate.property.type.view</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button string="Offers" name="%(property_offer_action)d" type="action" icon="fa-money">
                            <field name="offer_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title mb3">
                        <h1><field name="name" placeholder="Name"></field></h1>
                    </div>
                    <group>
                        <field name="sequence" />
                        <field name="offer_count" />
                    </group>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <tree>
                                    <field name="name" string="Title" />
                                    <field name="expected_price" />
                                    <field name="state" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>