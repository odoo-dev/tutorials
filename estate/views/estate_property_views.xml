<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{'search_default_state': True }</field>
        <field name="target">current</field>
        <field name="help" type='html'>
            <p class='o_view_nocontent_smiling_face'>Create a property to start playing with Real Estate</p>
        </field>  
    </record>

    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate_property.view.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" groups_draggable="False" records_draggable="False">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <!-- Property Name -->
                            <div>
                                <strong><field name="name"/></strong>
                            </div>
    
                            <!-- Expected Price -->
                            <div>
                                <span>Expected Price: </span><field name="expected_price"/>
                            </div>
                            <div>
                                <span>State: </span><field name="state"/>
                            </div>

                            <!-- Best Price -->
                            <div t-if="record.state.raw_value == 'offer received'">
                                <span>Best Price: </span>
                                <field name="best_price" />
                            </div>    
    
                            <!-- Selling Price -->
                            <div t-if = "record.state.raw_value == 'offer accepted'">
                                <span>Selling Price: </span>
                                <field name="selling_price" />
                            </div>
                                
                            <!-- Tags -->    
                            <div >
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    

    <record id="view_estate_property_type_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Estate Properties"  decoration-success="state=='offer received' or state=='offer accepted'" decoration-bf="state== 'offer accepted' " decoration-muted= "state == 'sold'">
                <header>
                    <button name="%(estate_property_add_offer_action)d" type="action" string="Add Offer" class="btn-primary" icon="fa-plus"/>
                </header>
                <field name="name" string="Title" align="left" />
                <field name="postcode" string="Postcode" align="left" />
                <field name="bedrooms" string="Bedrooms" />
                <field name="living_area" string="Living Area (sqm)" />
                <field name="expected_price" string="Expected Price" />
                <field name="selling_price" string="Selling Price" />
                <field name="tag_ids" widget="many2many_tags" string="Tags" options="{'color_field': 'color'}" />
                <field name="date_availability" string="Available From" align="left" optional="true"/>
                <field name="property_type_id" />
                <field name="state" ></field>
                <groupby name="property_type_id">
                    <button name="edit" type="edit" icon="fa-edit" title="Edit"/>
                </groupby>
            </tree>

        </field>
    </record>


    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            
            <form string="Properties">
                <header>
                    <button  name="action_sold" type="object" string="Sold" invisible="state == 'sold' or state == 'canceled'"/>
                    <button  name="action_cancel" type="object" string="Cancel" invisible="state == 'sold' or state == 'canceled'"/>
                    <button string="Print"
                            data-hotkey="q"
                            name="%(estate.report_estate_property_offer)d"
                            type="action"
                            class="print btn-primary o_mail_send"
                            invisible="state == 'new'">
                    </button>
                    <field name="state" widget="statusbar" />
                </header>

                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                     <field name="message_ids" />
                     <field name="activity_ids" />
                 </div>

                <sheet>
                    <field name="image" widget='image' class="oe_avatar" options='{"preview_image": "avatar_128"}'/>
                    <!-- Property Title -->
                    <h1>
                        <field name="name" readonly="0" />
                    </h1>


                    <div class = "row">
                        <div class="col-md-6">
                            <group >
                                <field name="tag_ids" widget="many2many_tags" string="Tags" options="{'color_field': 'color'}"/>
                            </group>
                        </div>
                    </div>

                    <!-- Top Section -->
                    <group>
                        
                        <group>
                            <field name="property_type_id" options="{'no_open': 'false', 'no_create' : 'true'}" />
                            <field name="postcode" string="Postcode" />
                            <field name="expected_price" string="Expected Price" />
                            
                        </group>
                        <group>
                            <field name="date_availability" string="Available From" />
                            <field name="selling_price" string="Selling Price" />
                            <field name="best_price" string="Best Offer" />

                        </group>
                    </group>

                    <!-- Tab Section for Description -->
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" string="Living Area (sqm)" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden" />
                                <field name="garden_area" string="Garden Area (sqm)" invisible="not garden"/>
                                <field name="garden_orientation" invisible="not garden"/>
                                <field name="total_area" />
                                <field name="active" />
                            </group>
                        </page>

                        <!-- Tab Section for Offers -->
                        <page string="Offers">
                            <field name="offer_ids" readonly="state == 'offer accepted' or state == 'sold' or state == 'canceled'" >
                                <tree editable="true" decoration-success="status=='accepted' " decoration-danger="status == 'refused'"> 
                                    <field name="price"></field>
                                    <field name="partner_id"></field>
                                    <field name="validity"></field>
                                    <field name="date_deadline" string = "Deadline"></field>
                                    <button name="action_accepted" type="object" string = "Accept" icon="fa-check" invisible="status != False"/>
                                    <button name="action_refused" type="object" string = "Refuse" icon="fa-times" invisible="status != False"/>
                                    <field name="status" optional='1'></field>
                                </tree>
                            </field> 
                        </page>
                        <!-- Tab Section for Other Info -->
                        <page string="Other Info">
                            <group>
                                <field name="salesperson" />
                                <field name="buyer" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate Properties">
                <field name="name" string="Title"/>
                <field name="postcode" string="Postcode"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="facades" string="Facades"/>
                <field name="property_type_id" />
                <filter string="Available" name= "state" domain="['|',('state', '=', 'new'), ('state', '=', 'offer received')]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by': 'postcode'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
