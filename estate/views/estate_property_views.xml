<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties">
                <field name="name" string="Title"/>
                <field name="state"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </list>
        </field>
    </record>
     <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <sheet>
                 <header>
                    <button name="action_cancel" type="object" string="Cancel"
                            class="btn btn-secondary" data-visible="[(state != 'sold')]"/>
                    <button name="action_sold" type="object" string="Sold"
                            class="btn btn-primary"  data-visible="[(state != 'cancelled')]" />
                </header> 
                    <group>
                        <group>
                            <field name="name" string="Title"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="name" string="Property Type"/>
                            <field name ="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                        <group>

                            <field name="postcode"/>
                            <field name="date_availability" string="Available From"/>
                            <field name ="state"/>
                             <field name="best_offers" string="Best Offers"/> 
                            

                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" string="Description"/>
                                <field name="bedrooms" string="Bedrooms"/>
                                <field name="living_area" string="Living Area(sqm)"/>
                                <field name="facades" string="Facades"/>
                                <field name="garage" string="Garage"/>
                                <field name="garden" string="Garden"/>
                                <field name="garden_area" string="Garden Area(sqm)" data-visible="garden"/>
                                <field name="garden_orientation" string="Garden Orientation"  data-visible="garden"/>
                                <field name="total_area" string="Total Area(sqm)"/> 
                            </group>
                        </page>
                        <page string="Other info">
                            <group>
                                <field name="salesperson"/>
                                <field name ="buyer"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <group>
                                <field name="price"/>
                                <field name ="partners"/>
                                <field name ="status"/>
                                <field name= "validity" string="Validity(days)"/>
                                <field name= "date_deadline" string="Deadline"/>
                            </group>
                        </page>
                        <page>
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record> 
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="name"/>
                <field name="postcode"/>
                <filter name="available" string="Available" domain="[('state', 'in', ['New', 'Offer Received'])]"/>
                <group expand="1" string="Group By">
                    <filter name="group_by_postcode" string="Postcode" context="{'group_by': 'postcode'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
