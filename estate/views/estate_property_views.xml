<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- action -->
  <record id="estate_property_action" model="ir.actions.act_window">
    <field name="name">Properties</field>
    <field name="res_model">estate.property</field>
    <field name="view_mode">kanban,tree,form</field>
    <field name="context">{'search_default_state': 1}</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
            No Data. Let's create one!
          </p>
    </field>
  </record>
  <!-- Kanban view -->
  <record id="estate_properties_view_kanban" model="ir.ui.view">
    <field name="name">estate.property.kanban</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <kanban default_group_by='property_type_id' records_draggable="False">
        <templates>
          <field name="state"/>
          <t t-name="kanban-box">
            <div class="oe_kanban_global_click">
              <h3>
                <field name="name"/>
              </h3>
              <p>Expected Price:
                <field name="expected_price"/>
              </p>
              <div>
                <t t-if="record.state.raw_value=='offer_recieved'">
                  <p>Best Offer:
                    <field name="best_price"/>
                  </p>
                </t>
                <t t-elif="record.state.raw_value=='offer_accepted'">
                  <p>Selling Price:
                    <field name="selling_price"/>
                  </p>
                </t>
              </div>
              <p>Tags:
                <field name="tag_ids" widget="many2many_tags" options="{'color_field':'color'}" />
              </p>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>
  <!-- tree view of all properties -->
  <record id="estate_properties_view_tree" model="ir.ui.view">
    <field name="name">estate.property.tree</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <tree decoration-success="state=='offer_recieved' or state=='offer_accepted'" decoration-bf="state=='offer_accepted'" decoration-muted="state=='sold'">
        <header>
          <button name="estate.offer_entry_wizard_action" type="action" string="Add Offer" class="btn-primary"/>
        </header>
        <field name="name"/>
        <field name="state" invisible="1" optional="hide"/>
        <field name="postcode"/>
        <field name="property_type_id"/>
        <field name="bedrooms"/>
        <field name="living_area"/>
        <field name="expected_price"/>
        <field name="selling_price"/>
        <field name="date_availability" optional="hide"/>
        <field name="buyer_id" string="Buyer" optional="hide" />
        <field name="salesperson_id" string="Salesperson" optional="hide" />
        <field name="tag_ids" string="Tags" optional="hide" widget="many2many_tags" options="{'color_field':'color'}"/>
      </tree>
    </field>
  </record>
  <!-- form view of properties -->
  <record id="estate_properties_view_form" model="ir.ui.view">
    <field name="name">estate.property.form</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button name="action_sold" class="btn-primary" type="object" string="Sold" invisible="state == 'sold' or state=='canceled'"/>
          <button name="action_cancel" type="object" string="Cancel" invisible="state == 'sold' or state=='canceled'"/>
          <field name="state" widget="statusbar" statusbar_visible="new,offer_recieved,offer_accepted,sold" options="{'clickable':1}"/>
        </header>
        <sheet>
          <h1>
            <field name="name"/>
            <field name="image" widget="image" class="oe_avatar" options="{'size': [150, 150]}" nolabel="1"/>
          </h1>
          <group>
            <label for="tag_ids"/>
            <field name="tag_ids" widget="many2many_tags" options="{'color_field':'color'}"/>
            <group colspan="2">
              <group cols="1">
                <field name="state"/>
                <field name="property_type_id" options="{'no_create': True, 'no_create_edit':True}" />
                <field name="postcode"/>
                <field name="date_availability"/>
              </group>
              <group cols="1">
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="best_price"/>
              </group>
            </group>
          </group>
          <!-- Description Tab -->
          <notebook>
            <page string="Description">
              <group>
                <field name="description"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="garden_area" invisible="not garden"/>
                <field name="garden_orientation" invisible=" not garden" />
                <field name="total_area"/>
              </group>
            </page>
            <!-- Other Info Tab -->
            <page string="Other Info">
              <group>
                <field name="buyer_id"/>
                <field name="salesperson_id"/>
              </group>
            </page>
            <!-- Offers Tab -->
            <page string="Offers">
              <group>
                <field name="offer_ids" readonly="state=='offer_accepted' or state=='sold' or state=='canceled'"/>
              </group>
            </page>
          </notebook>
        </sheet>
        <!-- chatter -->
        <div class="oe_chatter">
          <field name="activity_ids"/>
          <field name="activity_state"/>
          <field name="message_follower_ids" widget="mail_followers"/>
          <field name="message_ids" widget="mail_thread"/>
        </div>
      </form>
    </field>
  </record>
  <!-- Search View -->
  <record id="estate_property_search" model="ir.ui.view">
    <field name="name">estate.property.search</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <search string="Property Search">
        <field name="name"/>
        <field name="postcode"/>
        <field name="expected_price"/>
        <field name="bedrooms"/>
        <field name="living_area" filter_domain="[('living_area','>=',self)]"/>
        <field name="facades"/>
        <field name="property_type_id"/>
        <field name="buyer_id"/>
        <field name="salesperson_id"/>
        <field name="tag_ids" widget="many2many_tags"/>
        <filter string="Availability" name="state" domain="['|',('state','=','new'),('state','=','offer_recieved')]"/>
        <filter name="postcode" string="Postcode" context="{'group_by': 'postcode'}" />
      </search>
    </field>
  </record>
</odoo>
