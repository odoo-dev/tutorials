<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- tree view of all properties -->
  <record id="estate_properties_view_tree" model="ir.ui.view">
    <field name="name">estate.property.tree</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <tree string="Channel">
        <field name="name"/>
        <field name="postcode"/>
        <field name="bedrooms"/>
        <field name="living_area"/>
        <field name="expected_price"/>
        <field name="selling_price"/>
        <field name="date_availability"/>
      </tree>
    </field>
  </record>
  <!-- form view of properties -->
  <record id="estate_properties_view_form" model="ir.ui.view">
    <field name="name">estate.property.form</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <form string="Property">
        <sheet>
          <group>
            <h1>
              <field name="name"/>
            </h1>
            <group colspan="2">
              <group cols="1">
                <field name="postcode"/>
                <field name="date_availability"/>
              </group>
              <group cols="1">
                <field name="expected_price"/>
                <field name="selling_price"/>
              </group>
            </group>
          </group>
          <!-- Description Tab -->
          <notebook>
            <page string="Description">
              <group>
                <field name="description"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="garden_area"/>
                <field name="garden_orientation"/>
              </group>
            </page>
          </notebook>
        </sheet>
        <!-- chatter -->
        <div class="oe_chatter">
          <field name="activity_ids"/>
          <field name="activity_state"/>
          <field name="message_follower_ids" widget="mail_followers"/>
          <field name="message_ids" widget="mail_thread"/>
        </div>
      </form>
    </field>
  </record>
  <!-- Search View -->
  <record id="estate_property_search" model="ir.ui.view">
    <field name="name">estate.property.search</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <search string="Property Search">
        <field name="name"/>
        <field name="postcode"/>
        <field name="expected_price"/>
        <field name="bedrooms"/>
        <field name="living_area"/>
        <field name="facades"/>
        <filter string="Availability" name="state" domain="['|',('state','=','new'),('state','=','or')]"/>
        <filter name="postcode" string="Postcode" context="{'group_by': 'postcode'}" />
      </search>
    </field>
  </record>
  <record id="estate_property_action" model="ir.actions.act_window">
    <field name="name">Properties</field>
    <field name="res_model">estate.property</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
            No Data. Add some please
          </p>
    </field>
  </record>
</odoo>