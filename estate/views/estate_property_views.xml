<?xml version="1.0"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate property test action</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="estate_property_list_view" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Entries">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </list>
        </field>
    </record>

    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Entries">
                <sheet>
                    <h1 class="mb32">
                        <field name="name"/>
                    </h1>
                    <group>
                        <field name="postcode"/>
                        <field name="expected_price"/>
                        <field name="date_availability"/>
                        <field name="selling_price"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_search_view" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate">
                <field name="name" string="Title" />
                <field name="postcode" string="Postcode" />
                <field name="expected_price" string="Epected Price" />
                <field name="bedrooms" string="Bedrooms" />
                <field name="living_area" string="Living Area" />
                <field name="facades" string="Facades" />
                <separator/>
                <filter string="Archived" name="active" domain="[('active', '=', True)]"/>
                <filter string="Available" name="state" domain="['|', ('state', '=', 'new'), ('state', '=', 'received')]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode', 'residual_visible':True}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>