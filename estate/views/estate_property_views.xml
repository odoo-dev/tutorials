<odoo>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Estate" decoration-muted="state=='sold'" decoration-bf="state == 'offer_accepted'" decoration-success="state == 'offer_received' or state == 'offer_accepted'">
                <field name="state" invisible="True"/>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
                <field name="estate_property_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="context">{'search_default_available':True}</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <header>

                    <button name="action_sold" type="object" string="Sold" invisible="state != 'offer_accepted'"/>
                    <button name="action_cancel" type="object" string="Cancel" invisible="state == 'sold'"/>
                    <button name="%(estate_property_action)d" type="action" string="Tree view"/>
                    <field name="state" string="Status" widget="statusbar"/>
                </header>
                <sheet>
                    <div>
                        <h1 class="mb32">
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>

                        <group>
                            <field name="property_type_id" option="{'no_create': true}"/>
                            <field name="postcode"/>
                            <field name="date_availability" string="Available From"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="best_price"/>
                        </group>
                        <group>
                            <field name="estate_property_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" invisible="not garden"/>
                                <field name="garden_orientation" invisible="not garden"/>
                                <field name="total_area"/>
                                <field name="active"/>
                            </group>
                        </page>
                        <page string="Offer">
                            <field name="state" invisible="True"/>
                            <field name="offer_ids" readonly="state == 'offer_accepted' or state == 'sold' or state == 'canceled'"/>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="buyer_id" string="Buyer"/>
                                <field name="salesperson_id" string="Salesman"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate Property">
                <field name="name"/>
                <field name="postcode"/>
<!--                TODO: Why does the field below not show in the search view ? -->
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area','>=', 'self')]"/>
                <field name="facades"/>
                <field name="property_type_id"/>
                <group string="Group By">
                    <filter name="postcode_groupby" string="Postcode" context="{'group_by':'postcode'}"/>
                    <filter name="estate_property_type_groupby" string="Property Type"
                            context="{'group_by':'property_type_id'}"/>
                </group>
                <filter name="available" string="Available"
                        domain="['|',('state','=','new'),('state','=','offer received')]"/>
            </search>
        </field>

    </record>

    <menuitem id="estate_menu_root" name="Estate">
        <menuitem id="estate_menu_first_level" name="Advertisements" sequence="1">
            <menuitem id="estate_property_menu_action" name="Properties" action="estate_property_action"/>
        </menuitem>
        <menuitem id="estate_menu_second_level" name="Settings" sequence="2">
            <menuitem id="estate_property_type_menu_action" name="Property Type" action="estate_property_type_action"/>
            <menuitem id="estate_property_tag_menu_action" name="Property Tags" action="estate_property_tag_action"/>
        </menuitem>
    </menuitem>


</odoo>