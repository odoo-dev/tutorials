<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="property_type_form_view" model="ir.ui.view">
        <field name="name">estate.property.type.form.view</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(estate_property_type_offers_action_button)d" type="action"
                            class="oe_stat_button" icon="fa-bars">
                            <div class="o_stat_info">
                                <span class="o_stat_value">
                                    <field name="offer_count" />
                                </span>
                                <span class="o_stat_text">Offers</span>
                            </div>
                        </button>
                    </div>
                    <h1>
                        <field name="name" />
                    </h1>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids" string="Title" readonly="True">
                                <list>
                                    <field name="name" width="100" />
                                    <field name="expected_price" width="100" />
                                    <field name="state" width="100" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="property_type_list_view" model="ir.ui.view">
        <field name="name">estate.property.type.list.view</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle" />
                <field name="name" />
            </list>
        </field>
    </record>
</odoo>