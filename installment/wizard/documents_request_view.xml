<odoo>
    <record id="documents_request_form_view" model="ir.ui.view">
        <field name="name">Request File</field>
        <field name="priority" eval="6" />
        <field name="model">documents.request</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>

                        <group>
                            <field name="requestee_id" required="1" />

                        </group>
                        <group>
                            <field name="activity_date_deadline_range" />
                            <field name="activity_date_deadline_range_type" required="1" />

                        </group>
                    </group>

                    <footer>
                        <button name="filling_wizard" type="object" string="Request"
                            class="btn btn-primary" data-hotkey="q" />
                        <button string="Discard" class="btn-secondary" special="cancel"
                            data-hotkey="x" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_upload_documents" model="ir.actions.act_window">
        <field name="name">Request Files</field>
        <field name="res_model">documents.request</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="documents_request_form_view" />
        <field name="target">new</field>
    </record>
</odoo>