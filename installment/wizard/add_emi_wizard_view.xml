<?xml version="1.0"?>
<odoo>
    <record id="action_add_emi_wizard" model="ir.actions.act_window">
        <field name="name">Add EMI</field>
        <field name="res_model">add.emi</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <record id="view_add_emi_wizard_form" model="ir.ui.view">
        <field name="name">add.emi.wizard.form</field>
        <field name="model">add.emi</field>
        <field name="arch" type="xml">
            <form string="Add EMI">
                <group>
                    <field name="total_so_amount"/>
                    <field name="down_payment"/>
                    <field name="remaining_amount"/>
                    <field name="interest"/>
                    <field name="number_of_installments"/>
                    <field name="installment_amount"/>
                </group>
                <footer>
                    <button name="action_add_installment" string="Add Installment" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
