<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_clicker.client_action">
        <div>
            <p class="d-inline-block m-2">
                <span>
                    Clicks: <ClickValue/>
                </span>
            </p>
            <span t-on-click="() => this.clicker.increment(9)" class="btn btn-secondary fa fa-plus d-inline-block m-2"/>
        </div>
        <t t-if="true">
            <h1>
                Bots
            </h1>
            <div>
                <h2>
                    <t t-esc="this.clicker.bots.clickbot.purchased"/>x ClickBots (10 clicks/10 seconds)
                </h2>
                <span t-on-click="() => this.clicker.buyBot('clickbot')" class="btn btn-secondary d-inline-block m-2">
                    Buy ClickBot (1000 Clicks)
                </span>
                <h2>
                    <t t-esc="this.clicker.bots.bigbot.purchased"/>x BigBot (100 clicks/10 seconds)
                </h2>
                <span t-on-click="() => this.clicker.buyBot('bigbot')" class="btn btn-secondary d-inline-block m-2">
                    Buy BigBot (5000 Clicks)
                </span>
            </div>
        </t>
    </t>
</templates>
