<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_clicker.systray_item">
        <div class="o_nav_entry">
            <p class="d-inline-block m-2">
                <span>
                    Clicks: <ClickValue/>
                </span>
            </p>
            <span t-on-click="() => this.clicker.increment(9)" class="btn btn-secondary fa fa-plus d-inline-block m-2"/>
            <button class="btn btn-primary d-inline-block m-2" t-on-click="openClickerGame">
                Open
            </button>
        </div>
    </t>
</templates>
