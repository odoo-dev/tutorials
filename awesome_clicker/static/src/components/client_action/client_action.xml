<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_clicker.client_action">
        <div class="d-flex flex-column align-items-stretch w-100">
            <div class="d-flex flex-row align-items-center justify-content-center">
                <ClickValue clicks="clicker.state.clicks"/>
                <button class="btn btn-primary ms-2" t-on-click.stop="buttonIncrement">Increment</button>
            </div>
            <div class="d-flex flex-column align-items-stretch justify-content-center px-2">
                <h2 class="text-center">Level:</h2>
                <span class="text-center">Level <t t-esc="clicker.state.level"/></span>
                <div class="progress">
                    <div class="progress-bar" role="progressbar"
                         t-att-style="'width: ' + clicker.levelingStats.levelPercentage + '%;'" aria-valuenow="25"
                         aria-valuemin="0"
                         aria-valuemax="100"></div>
                </div>
            </div>

            <Notebook orientation="'horizontal'">
                <t t-set-slot="page_1" title="'Bots'" isVisible="true">
                    <div class="o_action_grid mb-2 p-2">
                        <ClickerBot t-foreach="clicker.bots" t-as="bot" t-key="bot_index" bot="bot"/>
                    </div>
                </t>
                <t t-set-slot="page_2" title="'Upgrades'" isVisible="true">
                    <p>Wise owl's silent flight. Through the moonlit forest deep, guides my path to code</p>
                </t>
            </Notebook>



        </div>
    </t>

</templates>
