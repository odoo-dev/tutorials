<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_clicker.client_action.clicker_bot">

        <div class="d-flex flex-column shadow rounded">
            <div t-if="props.bot.unlocked"
                 class="d-flex flex-row bg-secondary p-2 rounded-top align-items-center justify-content-between">
                <div class="d-flex flex-row align-items-center">
                    <i t-att-class="iconClass"></i>
                    <span class="ms-2"><strong><t t-esc="props.bot.spec.name"/></strong></span>
                </div>
                <div class="d-flex flex-row align-items-center">
                    <ClickValue clicks="props.bot.spec.produces"/>/s
                </div>
            </div>
            <div t-else="" class="d-flex flex-row bg-secondary p-2 rounded-top align-items-center">
                <i class="fa fa-2x fa-question"></i>
                <span class="ms-2"><strong>UNKNOWN</strong></span>
            </div>

            <div t-if="props.bot.unlocked" class="d-flex flex-column p-2 flex-grow-1 justify-content-between">
                <div class="d-flex flex-column align-items-center">
                    <span>Bought: <t t-esc="props.bot.number"/></span>
                    <span>Producing: <ClickValue clicks="props.bot.producing"/>/s</span>
                </div>
                <button t-if="props.bot.price > clicker.state.clicks" class="btn btn-primary btn-lg"
                        disabled="">Buy (<ClickValue clicks="props.bot.price"/>)</button>
                <button t-else="" class="btn btn-primary btn-lg" t-on-click="() => {clicker.buyBot(props.bot.id)}">Buy (<ClickValue
                        clicks="props.bot.price"/>)</button>
            </div>
            <div t-else="" class="d-flex flex-column p-2 flex-grow-1 justify-content-end">
                <button class="btn btn-secondary btn-lg" disabled="">LOCKED</button>
            </div>
        </div>
    </t>

</templates>