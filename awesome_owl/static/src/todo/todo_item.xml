<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.todo_item">
        <div t-att-class="{ 'text-muted': props.isCompleted, 'text-decoration-line-through': props.isCompleted }">
            <input type="checkbox" t-att="{ 'checked': props.isCompleted }" t-on-change="toggleCompletion"/>
            <t t-esc="props.id"/>. <t t-esc="props.description"/>
            <span class="fa fa-remove" t-on-click="callDelete"/>
        </div>
    </t>
</templates>
