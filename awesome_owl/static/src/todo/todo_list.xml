<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.todo_list">
        <div class="p-3">
            <input autofocus="false" type="text" id="todo_input_field" name="todo_input_field" t-on-click="focusInputField" t-on-keyup="addTodo" t-ref="todo_input_field"/>
                <t t-foreach="todos" t-as="todo" t-key="todo.id">
                    <TodoItem todo="todo" toggleState.bind="toggleCompletedTodo" removeTodo.bind="removeTodo"/>
                </t>
        </div>
    </t>
</templates>
