<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.lifecycle">
        <div class="container">
            <div class="row justify-content-center align-items-center">
                <div class="col-md-6" style="margin-top: 80px;">
                    <div class="card shadow">
                        <div class="card-body d-flex justify-content-between align-items-start m-4">
                            <div>
                                <p class="card-text">
                                    <strong style="margin-right: 15px;">
                                        <span>
                                            <t t-esc="state.userInfo.title"/>
                                        </span>
                                    </strong>
                                </p>
                                <p class="card-text">
                                    <strong style="margin-right: 15px;">Brand:</strong>
                                    <span>
                                        <t t-esc="state.userInfo.brand"/>
                                    </span>
                                </p>
                                <p class="card-text">
                                    <strong style="margin-right: 15px;">Category:</strong>
                                    <span>
                                        <t t-esc="state.userInfo.category"/>
                                    </span>
                                </p>
                                <p class="card-text">
                                    <strong style="margin-right: 15px;">Price:</strong>
                                    <span>
                                        <t t-esc="state.userInfo.price"/>
                                    </span>
                                </p>
                            </div>
                            <div>
                                <p class="card-text">
                                    <img t-att-src="state.userInfo.thumbnail" height="200vw" width="300vw"/>
                                </p>
                            </div>
                        </div>
                        <div class="card-footer text-center">
                            <button class="btn btn-danger" t-on-click="updateData">Update</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
