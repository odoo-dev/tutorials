<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.Card">
        <div class="card d-inline-block m-2" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">
                    <t t-out="props.title"/>
                    <button class="btn btn-primary" t-on-click="expand">
                        <t t-if="state.isExpanded">Collapse</t>
                        <t t-if="!state.isExpanded">Expand</t>
                    </button>
                </h5>
                <p class="card-text" t-if="state.isExpanded">
                    <t t-slot="default"/>
                </p>
            </div>
        </div>
    </t>

</templates>