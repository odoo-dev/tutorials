<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--Actions-->
    <record id='view_property' model="ir.actions.act_window">
        <field name="name">Properties</field> 
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field> 
        <field name="target">current</field>
    </record>

    <!--Search View-->
    <record id="real_estate_search" model="ir.ui.view">
        <field name="name">real_estate.search.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"></field>
                <field name="postcode"></field>
                <field name="expected_price"></field>
                <field name="bedrooms"></field>
                <field name="living_area"></field>
                <field name="facades"></field>
                <filter name="name" string="Name" domain="[('name', '=', 'test')]"></filter>
                <filter name="Available" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer received')]"></filter>
                <group expand="0" string="Post code">
                    <filter name="postcode" string="Post codes" domain="[]" context="{'group_by': 'postcode'}"></filter>
                </group>
            </search>
        </field>
    </record>
    
    <!--Tree View-->
    <record id="real_estate_tree_view" model="ir.ui.view">
        <field name="name">real_estate.tree.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree open_form_view="True">
                <field name="name" string="Property Name" />
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </tree>
        </field>
    </record>
    
    <!--Form View-->
    <record id="real_estate_form_view" model="ir.ui.view">
        <field name="name">estate.property.form.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="property_sold" type="object" string="Sold" />
                    <button name="property_cancel" type="object" string="Cancel"/>
                </header>
                <sheet>
                    <div class="oe_title mb3">
                        <h1><field name="name" placeholder="Name"></field></h1>
                    </div>
                    <field name="tag_ids" widget="many2many_tags"/>
                    <br/>
                    <br/> 
                    <group>
                        <group>
                            <field name="property_type_id"></field>
                            <field name="postcode"></field>
                            <field name="date_availability"></field>
                            <field name="state"></field>
                        </group>
                        <group>
                            <field name="expected_price"></field>
                            <field name="best_price"></field>
                            <field name="selling_price"></field>
                            <field name="active"></field>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"></field>
                                <field name="bedrooms"></field>
                                <field name="living_area"></field>
                                <field name="facades"></field>
                                <field name="garage"></field>
                                <field name="garden"></field>
                                <field name="garden_area"></field>
                                <field name="garden_orientation"></field>
                                <field name="total_area"></field>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids">
                                <tree>
                                    <field name="price"/>
                                    <field name="partner_id"/>
                                    <field name="validity"/>
                                    <button name="offer_accept" type="object" icon="fa-check"/>
                                    <button name="offer_refused" type="object" icon="fa-times"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Other info">
                            <group>
                                <field name="buyer_id"/>
                                <field name="salesperson_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>