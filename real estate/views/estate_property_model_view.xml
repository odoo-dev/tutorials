<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--Actions-->
    <record id='view_property' model="ir.actions.act_window">
        <field name="name">Properties</field> 
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form,kanban</field> 
        <field name="target">current</field>
        <field name="context">{"search_default_Available":True}</field>
    </record>

    <!--Search View-->
    <record id="real_estate_search" model="ir.ui.view">
        <field name="name">real_estate.search.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"></field>
                <field name="postcode"></field>
                <field name="expected_price"></field>
                <field name="bedrooms"></field>
                <field name="living_area"></field>
                <field name="facades"></field>
                <filter name="name" string="Name" domain="[('name', '=', 'test')]"></filter>
                <filter name="Available" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer received')]"></filter>                
                <group expand="0" string="Post code">
                    <filter name="postcode" string="Post codes" domain="[]" context="{'group_by': 'postcode'}"></filter>
                </group>
            </search>
        </field>
    </record>
    
    <!--Tree View-->
    <record id="real_estate_tree_view" model="ir.ui.view">
        <field name="name">real_estate.tree.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree decoration-success="state in ('offer received', 'offer accepted')" 
                decoration-bf="state == 'offer accepted'"
                decoration-muted="state == 'sold'">
                <field name="state" column_invisible="1" />
                <field name="name" string="Property Name" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" filter_domain="[('living_area' , '&gt;=', self)]" />
                <field name="selling_price" />
                <field name="date_availability" optional="hide" />
                <field name="expected_price" optional="hide"/>
            </tree>
        </field>
    </record>
    
    <!--Form View-->
    <record id="real_estate_form_view" model="ir.ui.view">
        <field name="name">estate.property.form.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_property_sold" type="object" string="Sold" invisible="state in ('canceled', 'sold')" />
                    <button name="action_property_cancel" type="object" string="Cancel" invisible="state in ('canceled', 'sold')" />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_title mb3">
                        <h1><field name="name" placeholder="Name"></field></h1>
                    </div>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field':'color'}"/>
                    <br/>
                    <br/> 
                    <group>
                        <group>
                            <field name="property_type_id" options="{'no_create':'true'}"></field>
                            <field name="postcode"></field>
                            <field name="date_availability"></field>
                            <field name="state"></field>
                        </group>
                        <group>
                            <field name="expected_price"></field>
                            <field name="best_price"></field>
                            <field name="selling_price"></field>
                            <field name="active"></field>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"></field>
                                <field name="bedrooms"></field>
                                <field name="living_area"></field>
                                <field name="facades"></field>
                                <field name="garage"></field>
                                <field name="garden"></field>
                                <field name="garden_area" invisible="not garden"></field>
                                <field name="garden_orientation" invisible="not garden"></field>
                                <field name="total_area"></field>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" readonly="state in ('offer accepted', 'sold', 'canceled')">
                                <tree editable="bottom"
                                    decoration-danger="status == 'refused'" 
                                    decoration-success="status == 'accepted'">
                                    <field name="status" column_invisible="1" />
                                    <field name="price" />
                                    <field name="partner_id" />
                                    <field name="validity" />
                                    <button name="action_offer_accept" type="object" icon="fa-check" invisible="status in ('accepted', 'refused')" />
                                    <button name="action_offer_refused" type="object" icon="fa-times" invisible="status in ('accepted', 'refused')" />
                                </tree>
                            </field>
                        </page>
                        <page string="Other info">
                            <group>
                                <field name="buyer_id" />
                                <field name="salesperson_id" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!--Kanban View-->
    <record id="estate_property_kanban_view" model="ir.ui.view">
        <field name="name">estate.property.kanba.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban string="Properties" editable="top" default_group_by="property_type_id">
                <template>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <h2><field name="name"/></h2>
                            <field name="tag_ids" options="{'color_field':'color'}"></field>
                            <field name="state"></field>
                            <p class="my-0"><b>Expected Price : </b><field name="expected_price" /></p>
                            <p class="my-0" t-if="record.state.raw_value != 'offer received'"><b>Best Price : </b><field name="best_price" /></p>
                            <p t-if="record.state.raw_value=='offer accepted' or record.state.raw_value=='sold'"><b>Selling Price : </b><field name="selling_price" /></p>
                            <t t-foreach="[1, 2, 3]" t-as="i">
                                <p><t t-out="i"/></p>
                            </t>
                        </div>
                    </t>
                </template>
            </kanban>
        </field>
    </record>
</odoo>