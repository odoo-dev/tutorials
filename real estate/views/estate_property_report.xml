<odoo>
    <!--Report Template-->
    <template id="report_offers">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="property">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                        </div>
                        <div>
                            <strong>Salesman: </strong>
                            <span t-field="property.salesperson_id"/>
                        </div>
                        <div>
                            <strong>Status: </strong>
                            <span t-field="property.state"/>
                        </div>
                        <t t-call="real estate.report_offers_table"></t>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="report_offers_table">
        <table class="table">
            <thead>
                <tr>
                    <th>Price</th>
                    <th>Partner</th>
                    <th>State</th>
                </tr>
            </thead>
            <tbody>
                <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                <tr t-if="len(offers)>0" t-foreach="offers" t-as="offer">
                    <td>
                        <span t-field="offer.price"/>
                    </td>
                    <td>
                            <span t-field="offer.partner_id"/>
                    </td>
                    <td>
                        <span t-field="offer.status"/>
                    </td>
                </tr>
                <t t-else="">
                    <p>No offers for this property</p>
                </t>
            </tbody>
        </table>
    </template>

    <!--Report Action-->
    <record id="report_estate_property_offer" model="ir.actions.report">
        <field name="name">Offer Report</field>
        <field name="model">estate.property</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">real estate.report_offers</field>
        <field name="binding_model_id" ref="model_estate_property"/>
    </record>
</odoo>