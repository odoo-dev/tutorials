<odoo>
    <record id="view_warranty_configuration_form" model="ir.ui.view">
        <field name="name">add.warranty.wizard.form</field>
        <field name="model">add.warranty.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="warranty_line_ids" widget="one2many_list">
                            <list>
                                <field name="product_id" />
                                <field name="year" />
                                <field name="end_date" />
                            </list>
                        </field>
                    </group>
                    <footer>
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_open_warranty_wizard" model="ir.actions.act_window">
        <field name="name">Add Offers</field>
        <field name="res_model">add.warranty.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_warranty_configuration_form" />
        <field name="target">new</field>
    </record>
</odoo>