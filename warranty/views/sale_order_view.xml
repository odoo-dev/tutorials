<odoo>
    <record id="warranty_configuration_sale_order_form" model="ir.ui.view">
        <field name="name">warranty.configuration.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='so_button_below_order_lines']" position="inside">
                <button string="Add Warranty"
                         name="%(action_open_warranty_wizard)d"
                         type="action"
                         class="btn btn-primary" />
            </xpath>
        
        </field>
    </record>
</odoo>
