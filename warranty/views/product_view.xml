<odoo>
    <record id="product_template_warranty_view" model="ir.ui.view">
        <field name="name">product.template.warranty.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='description']" position="after">
                <group name="product_template_warranty" string="warranty">
                    <field name="warranty" string="Is Warranty Available ?" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
