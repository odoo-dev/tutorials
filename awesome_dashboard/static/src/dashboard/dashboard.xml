<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout display="display" className="'o_dashboard h-100'">
            <t t-set-slot="layout-buttons">
                <button type="button" class="btn btn-primary" t-on-click="openCustomer">Customers</button>
                <button type="button" class="btn btn-primary" t-on-click="openLeads">Leads</button>
            </t>
            <div class="d-flex flex-wrap">
                <t t-foreach="items" t-as="item" t-key="item.id">
                   <DashboardItem size="item.size">
                      <t t-set="itemProp" t-value="item.props ? item.props(stats) : {'data': stats}"/>
                       <t t-component="item.Component" t-props="itemProp"/>
                   </DashboardItem>
                </t>
            </div>
        </Layout>
    </t>

</templates>
