<odoo>

     <record id="view_estate_property_event_wizard_form" model="ir.ui.view">
        <field name="name">estate.property.event.wizard.form</field>
        <field name="model">estate.property.event.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Event">
                <group>
                    <field name="date"/>
                    <field name="attendee_ids"/>
                    <field name="organizer_id"/>
                    <field name="event_name"/>
                </group>
                <footer>
                    <button string="Create Event" type="object" name="create_event" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_estate_property_event_wizard" model="ir.actions.act_window">
        <field name="name">Create Event</field>
        <field name="res_model">estate.property.event.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_estate_property_event_wizard_form"/>
        <field name="target">new</field>
    </record>

    <record id="view_estate_property_form_inherited" model="ir.ui.view">
    <field name="name">estate.property.form.inherit.create.event</field>
    <field name="model">estate.property</field>
    <field name="inherit_id" ref="estate.estate_property_view_form"/>
    <field name="arch" type="xml">
        <xpath expr="//header" position="inside">
            <button name="%(action_estate_property_event_wizard)d" type="action" string="Make event " class="oe_highlight"/>  
        </xpath>
    </field>
</record>


</odoo>
