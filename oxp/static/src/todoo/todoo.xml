<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="oxp.Todoo">
        <div class="bg-light p-1 d-flex align-items-center flex gap-2 ms-3">
            <div> Todoo Dashboard</div>
            <button class="btn btn-primary" t-on-click="addTodoList"><div class="fa fa-plus-circle"></div> TodoList</button>
        </div>
        <div class="d-flex flex-wrap">
            <t t-foreach="elements" t-as="element" t-key="element.id">
                <TodoList name="element.name" list_id="element.id" remove.bind="removeList"/>
            </t>
        </div>
    </t>
</templates>
