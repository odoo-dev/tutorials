<odoo>

    <record id="estate_property_schedule_meeting" model="ir.ui.view">
		<field name="name">estate.schedule.meeting.wizard.name</field>
		<field name="model">estate.meeting.wizard</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<field name="agenda" />
						<field name="start_date" />
						<field name="end_date" />
						<field name="description" />
					</group>
				</sheet>
                <footer>
                    <button name="action_confirm" type="object" string="Make an Offer" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
			</form>
		</field>
	</record>

</odoo>