<odoo>
    <record id="stock_batch_picking_graph_view" model="ir.ui.view">
        <field name="name">stock.picking.batch.view.graph</field>
        <field name="model">stock.picking.batch</field>
        <field name="arch" type="xml">
            <graph type="bar">
                <field name="scheduled_date" interval="day"/>
                <field name="vehicle_category_id"/>
            </graph>
        </field>
    </record>

    <record id="stock_batch_picking_view_gantt" model="ir.ui.view">
        <field name="name">stock.picking.batch.view.gantt</field>
        <field name="model">stock.picking.batch</field>
        <field name="arch" type="xml">
            <gantt
                date_start="create_date" 
                date_stop="scheduled_date" 
                default_group_by="dock_id,vehicle_id"
                thumbnails="{'vehicle_id': 'image_128'}"
                color="vehicle_id"
                decoration-info="state == 'draft'"
                decoration-success="state=='in_progress'"
                default_scale='week'
            >
                <field name="state"/>
            </gantt>
        </field>
    </record>

    <record id="stock_picking_batch.stock_picking_batch_action" model="ir.actions.act_window">
        <field name="view_mode">tree,kanban,form,graph,gantt</field>
    </record>
</odoo>
