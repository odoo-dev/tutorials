<odoo>
    <record id="stock_picking_batch_form_inherit" model="ir.ui.view">
        <field name="name">stock.picking.batch.view.form.inherit</field>
        <field name="model">stock.picking.batch</field>
        <field name="inherit_id" ref="stock_picking_batch.stock_picking_batch_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='scheduled_date']" position="after">
                <field name="dock_id" string="Dock"/>
                <field name="vehicle_id" string="Vehicle" placeholder="Third Party Provider"/>
                <field name="vehicle_category_id" string="Vehicle Category"/>
                <field name="weight" widget="progressbar" string="Weight" invisible="vehicle_id==False"/>
                <field name="volume" widget="progressbar" string="Volume" invisible="vehicle_id==False"/>
            </xpath>
        </field>
    </record>
</odoo>
