<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="warranty_configuration_action" model="ir.actions.act_window">
        <field name="name">Warranty Configuration</field>
        <field name="res_model">warranty.configuration</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="warranty_list_view" model="ir.ui.view">
        <field name="name">warranty.view.list</field>
        <field name="model">warranty.configuration</field>
        <field name="arch" type="xml">
            <list string="Warranty List">
                <field name="name" string="Name" />
                <field name="product_id" string="Product" />
                <field name="percentage" string="Percentage" />
            </list>
        </field>
    </record>

    <!-- Is warranty available checkbox under sales tab in product form -->
    <record id="inherited_product_template_form_view_warranty_configuration" model="ir.ui.view">
        <field name="name">warranty.configuration.view.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='description']" position="after">
                <group name="warranty_info" string="Warranty Configuration">
                    <field name="warranty" colspan="2" />
                </group>
            </xpath>
        </field>
    </record>

</odoo>