<odoo>
    <record id="view_order_form_inherited_for_add_warranty_button" model="ir.ui.view">
        <field name="name">sale.order.form.add.warranty</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='so_button_below_order_lines']" position="inside">
                <button string="Add Warranty"
                    name="action_open_warranty_wizard"
                    type="object"
                    class="btn btn-primary"
                />
            </xpath>
        </field>
    </record>
</odoo>
