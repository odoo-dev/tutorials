<odoo>
    <record id="view_add_warranty_wizard" model="ir.ui.view">
        <field name="name">add.warranty.wizard.form</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <form string="add warranty">
                <field name="product_id" />
                <footer>
                    <button string="Confirm" name="action_add_warranty" type="object"
                        class="btn-primary" default_focus="1" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
