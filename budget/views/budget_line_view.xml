<odoo>
    <record id="budget_line_list_view" model="ir.ui.view">
        <field name="name">budget.line_list.view</field>
        <field name="model">budget.budget.lines</field>
        <field name="arch" type="xml">
             <list editable="bottom">
                <field name="currency_id" column_invisible="True"/>
                <field name="name"/>
                <field name="analytic_account_id"/>
                <field name="budget_amount" widget="monetary"/>
                <field name="achieved_amount" widget="monetary"/>
            </list>
        </field>
    </record>

    <record id="budget_line_graph_view" model="ir.ui.view">
       <field name="name">budget.line.graph.view</field>
        <field name="model">budget.budget.lines</field>
        <field name="arch" type="xml">
            <graph type="bar" stacked="1">
                <field name="name" type="row" />
                <field name="budget_amount" type="measure" />
                <field name="achieved_amount" />
                <field name="over_budget" type="measure" />
            </graph>
        </field>
    </record> 

    <record id="budget_line_pivot_view" model="ir.ui.view">
         <field name="name">budget.line.pivot.view</field>
        <field name="model">budget.budget.lines</field>
        <field name="arch" type="xml">
            <pivot string="Budget Lines">
                <field name="analytic_account_id" type="row" />
                <field name="count_account_analytic_line" string="Count" type="measure" />
            </pivot>
        </field>
    </record>
    
    <record id="budget_line_list_action" model="ir.actions.act_window">
        <field name="name">Budget Lines</field>
        <field name="res_model">budget.budget.lines</field>
        <field name="view_mode">list,graph,pivot</field>
        <field name="context">{'default_budget_id': active_id}</field>
        <field name="domain">[('budget_id', '=', context.get('default_budget_id'))]</field>
    </record>

    <record id="view_budget_management_budget_line_gantt" model="ir.ui.view">
        <field name="name">budget.budget.lines.gantt</field>
        <field name="model">budget.budget.lines</field>
        <field name="arch" type="xml">
            <gantt string="Budget Lines"
                color="analytic_account_id"
                display_mode="sparse"
                progress_bar="analytic_account_id"
                create="false"
                delete="false"
                default_range="month"
                date_start="start_date"
                decoration-info="True"
                date_stop="end_date">

                <field name="analytic_account_id" />
                <field name="budget_amount" />
                <field name="user_id" />
                <templates>
                    <div t-name="gantt-popover">
                        <div>
                            <span>
                                <h6>analytic account: </h6>
                                <span t-esc="analytic_account_id" />

                                <h6 class="pt-2">budget amount: </h6>
                                <span t-esc="budget_amount" />

                                <h6 class="pt-2">Responsible: </h6>
                                <span t-esc="user_id" />
                            </span>
                        </div>
                    </div>
                </templates>
            </gantt>
        </field>
    </record>

</odoo>