<odoo>
    <record id="view_budget_wizard_form" model="ir.ui.view">
        <field name="name">budget.wizard.form</field>
        <field name="model">budget.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Multiple Budgets">
                <sheet>
                    <group>
                        <field name="start_date" widget="daterange" string="Duration"
                            options='{"end_date_field": "end_date", "always_range": "1"}'
                            required="True"/>
                            <field name="end_date" invisible="1" />
                    </group>
                    <group>
                        <field name="period" string="Periods" widget="radio" />
                    </group>
                </sheet>
                <footer>
                    <!-- <button string="Create Budgets" type="object" name="action_create_budgets"
                        class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" /> -->
                </footer>
            </form>
        </field>
    </record>
    <record id="action_budget_wizard" model="ir.actions.act_window">
        <field name="name">Create Multiple Budgets</field>
        <field name="res_model">budget.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_budget_wizard_form" />
        <field name="target">new</field>
    </record>
</odoo>