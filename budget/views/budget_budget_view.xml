<odoo>
    <record id="budget_form_view" model="ir.ui.view">
        <field name="name">budget.budget.form</field>
        <field name="model">budget.budget</field>
        <field name="arch" type="xml">
            <form string="Budget">
                <header>
                    <button name="action_reset_to_draft" type="object" string="Reset to Draft"
                        invisible="state in ['draft']"
                    />
                    <!-- <button name="onclick_confirmed" type="object" string="Confirm"
                        invisible="state in ['revised','done','confirmed']"
                    /> -->
                    <button name="action_revise" type="object" string="Revise"
                        invisible="state in ['revised','done']"
                    />
                    <button name="action_done" type="object" string="Done"
                        invisible="state in ['done']"
                    />

                    <field name="state" statusbar_clickable="True" widget="statusbar"
                        statusbar_visible="draft,confirmed,revised,done" />
                </header>
                <sheet>
                    <h1>budget <field name="name" />
                    </h1>
                    <group>
                        <group>
                            <field name="responsible_id" />
                            <field name="revision_id" />
                        </group>
                        <group>
                            <group>
                                <field name="start_date" widget="daterange" string="Period"
                                    options='{"end_date_field": "end_date", "always_range": "1"}'
                                    required="True" />
                                <field name="end_date" invisible="1" />
                            </group>
                            <group>
                                <field name="company_id" />
                            </group>
                        </group>
                    </group>
                    <notebook>
                        <page name="Budget Lines">
                            <field name="budget_line_ids">
                                <list no_open="1"
                                    editable="bottom"
                                    create="state in ['draft']"
                                >
                                    <field name="currency_id" column_invisible="True" />
                                    <field name="analytic_account_id" string="Analytic Account"
                                        readonly="state not in ['draft']" />
                                    <field name="budget_amount" string="Budget Amount"
                                        readonly="state not in ['draft']" />
                                    <field name="achieved_amount" string="Achived Amount" />
                                    <field name="achieved_percentage" string="Achived (%)"
                                        widget="progressbar" options="{'max_value': 100}" />
                                    <button name="%(action_open_account_analytic_lines_list)d"
                                        type="action"
                                        string="View"
                                    />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="budget_view_kanban" model="ir.ui.view">
        <field name="name">budget.budget.kanban</field>
        <field name="model">budget.budget</field>
        <field name="arch" type="xml">
            <kanban
                highlight_color="color"
                can_open="true"
                action="%(budget_line_list_action)d"
                type="action"
                on_create="budget.action_budget_wizard"
                class="o_kanban_mobile">
                <templates>
                    <t t-name="menu">
                        <div class="container">
                            <div class="row">
                                <div name="card_menu_view">
                                    <div role="menuitem" aria-haspopup="true">
                                        <a class="dropdown-item" role="menuitem"
                                            name="action_budget_form_view" type="open">
                                            Configuration</a>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div role="menuitem" aria-haspopup="true" class="col-6">
                                    <field name="color" widget="kanban_color_picker" />
                                </div>
                            </div>
                        </div>
                    </t>
                    <t t-name="card">
                        <field name="name" class="fw-bolder" />
                        <div class="o_row">
                            <span class="fa fa-clock-o me-2" title="clock"></span>
                            <field name="start_date" />
                            <span class="fa fa-long-arrow-right mx-2 oe_read_only" title="arrow"></span>
                            <field name="end_date" />
                        </div>
                        <footer class="mt-auto pt-0 ms-1">
                            <field name="user_id" class="ms-auto" widget="many2one_avatar_user" />
                        </footer>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_budget_form_view" model="ir.actions.act_window">
        <field name="name">Budgets</field>
        <field name="res_model">budget.budget</field>
        <field name="view_mode">list</field>
    </record>

</odoo>