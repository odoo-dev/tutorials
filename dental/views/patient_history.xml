                                <field name="tooth_45_staining"/>
                                <field name="tooth_46_staining"/>
                                <field name="tooth_47_staining"/>
                                <field name="tooth_48_staining"/>
                            </group>
                    </group>

                    <group string="Billing">
                        <field name="consultation_type"/>
                        <field name="call_out"/>
                        <field name="scale_polish"/>
                        <field name="flouride"/>
                        <field name="filling_description"/>
                        <field name="aligner_delivery_attachment"/>
                        <field name="whitening"/>
                        <field name="fissure_sealant_qty"/>
                        <field name="attachments_removed"/>
                        <field name="aligner_followup_scan"/>
                        <field name="other_notes"/>
                    </group>

                    <field name="additional_notes" placeholder="Type down your notes here..."/>
                </sheet>
            </form>
        </field>
    </record>

</odoo>