<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_dental_patient" model="ir.actions.act_window">
            <field name="name">Dental Patients</field>
            <field name="res_model">dental.patient</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face"> No patient data</p>
            </field>
     </record>

    <record id="view_dental_patient_kanban" model="ir.ui.view">
        <field name="name">dental.patient.kanban</field>
        <field name="model">dental.patient</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" records_draggable="false">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <field name="image" widget="image" class="oe_avatar"/>
                            <strong>
                                <field name="name"/>
                            </strong>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_dental_patient_tree" model="ir.ui.view">
        <field name="name">dental.patient.tree</field>
        <field name="model">dental.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_dental_patient_form" model="ir.ui.view">
        <field name="name">dental.patient.form</field>
        <field name="model">dental.patient</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="new,to_do_today,done,to_invoice" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" placeholder="Patient Name"></field>
                        <field name="image" widget="image" class="oe_avatar"/>
                    </h1>
                        <field name="history_ids" />
                    <notebook>
                        <page string="Medical">
                        <group>
                            <group>
                                <field name="guarantor_id" string="GP's Name" />
                                <field name="guarantor_phone" string="GP's Phone"/>
                                <field name="chronic_conditions_ids" widget="many2many_tags"/>
                                <field name="hospitalised" />
                                <field name="medication_ids" widget="many2many_tags"/>
                                <field name="gender" invisible="1"/>
                            </group>
                            <group>
                                <field name="allergy_ids" widget="many2many_tags"/>
                                <field name="habit_ids" widget="many2many_tags"/>
                                <field name="special_care" />
                                <field name="psychiatric_history" />                              
                            </group>
                            <group name="female" string="FEMALE" invisible= "gender != 'female'">
                                <field name="pregnant" />
                                <field name="nursing" />
                                <field name="treatment" />
                            </group>

                        </group>
                            <field name="notes" placeholder="Type down your notes here"/>
                        </page>
                        <page string="Medical Aid">
                            <group>
                                <group>
                                    <field name="medical_aid_id" />
                                    <field name="medical_aid_plan" />
                                    <field name="medical_aid_number" />
                                </group>
                                <group>
                                    <field name="member_code" />
                                    <field name="dependant_code" />
                                </group>
                            </group>
                                <field name="notes" placeholder="Type down your notes here"/>
                        </page>
                        <page string="History">
                            <group>
                                <field name="history_ids" />
                            </group>
                            <field name="notes" placeholder="Type down your notes here"/>
                        </page>
                        <page string="Patient Details">
                        <group>
                            <group name="kin" string="NEXT TO KIN">
                                <field name="emergency_contact_id" />
                                <field name="emergency_contact_phone" />
                            </group>
                            <group name="details" string="PATIENT DETAILS">
                                <field name="occupation" />
                                <field name="identity_number" />
                                <field name="date_of_birth" />
                                <field name="gender" />
                                <field name="marital_status" />
                            </group>
                            <group name="consent" string="CONSENT FORM">
                                
                            </group>
                               <field name="notes" placeholder="Type down your notes here"/>
                        </group>
                        </page>
                        <page string="Guarantor Details">
                            <group>
                            <group name="guarantor" string="Guarantor">
                                <field name="guarantor_id" />
                                <field name="guarantor_phone" />
                                <field name="guarantor_email" />
                             
                            </group>
                            <group name="office_use" string="OFFICE USE">
                                <field name="guarantor_company" />
                                <field name="guarantor_tags" widget="many2many_tags" />
                            </group>
                        </group>
                            <field name="notes" placeholder="Type down your notes here"/>
                        </page>
                    </notebook>
            
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                    <field name="activity_ids" />
                </div>
            </form>
        </field>
    </record>

</odoo>
