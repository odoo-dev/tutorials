<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dental Patient Form View -->
    <record id="dental_patient_form_view" model="ir.ui.view">
        <field name="name">dental.patient.form</field>
        <field name="model">dental.patient</field>
        <field name="arch" type="xml">
            <form string="Form View">
                <header>
                    <field name="state" widget="statusbar"></field>
                </header>
                <sheet>
                    <h1>
                        <field name="name" placeholder="E.g Akhil Pundir"></field>
                        <field name="patient_image" widget="image" class="oe_avatar" />
                    </h1>
                    <group>
                        <field name="state"></field>
                        <field name="history_ids" string="History">
                        </field>
                    </group>
                    <notebook>
                        <page string="Medical">
                            <group>
                                <group>
                                    <field name="gp_name" string="GP's Name"></field>
                                    <field name="gp_phone" string="GP's Phone"></field>
                                    <field name="chronic_ids" string="Chronic Conditions"
                                        widget="many2many_tags" />
                                    <field name="hospitalised_year" string="Hospitalised this year"></field>
                                    <field name="medication_ids" widget="many2many_tags"></field>
                                    <field name="isfemale" string="Female"></field>
                                </group>
                                <group>
                                    <field name="allergie_ids" widget="many2many_tags"></field>
                                    <field name="habit_ids" widget="many2many_tags"></field>
                                    <field name="under_speciality" string="Unser specialist care"></field>
                                    <field name="physicatric_history" string="Psychiatric History"></field>
                                </group>
                            </group>
                            <group name="female" string="Female">
                                <field name="ispregnant" class="w-50" invisible="not isfemale"
                                    string="Are you pregnant" />
                                <field name="isnursing" class="w-50" invisible="not isfemale"
                                    string="Are you nursing" />
                                <field name="areyouon" invisible="not isfemale" string="Are you on"></field>
                            </group>
                        </page>
                        <page name="Medical Aids">
                            <group>
                                <group>
                                    <field name="medicalaid_id"></field>
                                    <field name="medical_aid_plan" />
                                    <field name="medical_aid_no">
                                    </field>
                                </group>
                                <group>
                                    <field name="main_member_code">
                                    </field>
                                    <field name="dependent_code">
                                    </field>
                                </group>
                            </group>
                        </page>
                        <page name="History">
                            <field name="history_ids" string="History">
                            </field>
                        </page>
                        <page name="Patient Details">
                            <group>
                                <group name="Next of kin" string="Next of kin">
                                    <field name="emegency_contact_id" string="emeergency contact"></field>
                                    <field name="mobile" options="{}"></field>
                                </group>
                                <group name="Patient Details" string="Patient Details">
                                    <field name="company_id" string="Company or School"></field>
                                    <field name="ocupation">
                                    </field>
                                    <field name="identity_no">
                                    </field>
                                    <field name="birth_date">
                                    </field>
                                    <field name="gender">
                                    </field>
                                    <field name="marital_status">
                                    </field>
                                </group>
                            </group>
                            <group name="Consent Form" string="Consent Form">
                                <field name="consent_sign"></field>
                                <field name="consent_date"></field>
                            </group>
                        </page>
                        <page name="Guarntor Details">
                            <group>
                                <group name="Gurantor" string="Gurantor">
                                    <field name="gurantor" string="Gurantor"></field>
                                    <field name="gurantor_mobile" string="Gurantor Mobile Phone"></field>
                                    <field name="gurantor_phone" string="Phone"></field>
                                    <field name="gurantor_email" string="Email"></field>
                                </group>
                                <group name="Office" string="Office Use">
                                    <field name="gurantor_company_id" string="company"></field>
                                    <field name="gurantor_tags" widget="many2many_tags"></field>
                                </group>
                            </group>
                        </page>
                    </notebook>
                    <field name="description_female" placeholder="Write your text here" />
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                    <field name="activity_ids" />
                </div>
            </form>
        </field>
    </record>

    <!-- Dental Patient Kanban View  -->
    <record id="dental_patient_kanban_view" model="ir.ui.view">
        <field name="name">dental.patient.view.kanban</field>
        <field name="model">dental.patient</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="state">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click ">
                                <div class="d-flex align-items-center ">
                                    <div class="w-50 ">
                                        <field name="patient_image" widget="image"
                                            class="img-fluid rounded-circle " />
                                    </div>
                                    <div class="mx-auto">
                                        <strong class="">
                                            <field name="name" />
                                        </strong>
                                    </div>
                                </div>
                            </div>

                        </t>
                    </templates>
                </field>
            </kanban>
        </field>
    </record>

    <!-- Form View for Medical Aids  -->
    <record id="action_medical_aids_view_form" model="ir.ui.view">
        <field name="name">medical.aids.form.view</field>
        <field name="model">medical.aids</field>
        <field name="arch" type="xml">
            <form string="Form View">
                <field name="state" widget="statusbar"></field>
                <sheet>
                    <h1>
                        <field name="name" placeholder="E.g Akhil Pundir"></field>
                    </h1>
                    <group>
                        <field name="state"></field>
                        <group>
                            <field name="contact" string="Contact">
                            </field>
                            <field name="phone"></field>
                            <field name="email"></field>
                        </group>
                        <group>
                            <field name="comapny_id"></field>
                        </group>
                    </group>
                    <field name="description" placeholder="wirte down your notes here"></field>
                </sheet>
            </form>
        </field>
    </record>

