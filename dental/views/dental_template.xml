<odoo>

    <template id="portal_my_home_extension" inherit_id="portal.portal_my_home">
        <xpath expr="//div[@class='o_portal_my_home']/div[@class='o_portal_docs row g-2']"
            position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/dental/static/description/tooth.png'" />
                <t t-set="title">Dental</t>
                <t t-set="text">Manage your dental appointments and records</t>
                <t t-set="url" t-value="'/my/dental'" />
                <t t-set="config_card" t-value="True" />
            </t>
        </xpath>
    </template>

    <template id="portal_my_dental" name="My Dental Portal">
        <t t-call="portal.portal_layout">
            <t t-set="title">Dental</t>
            <div class="container">
                <h1>Dental</h1>
                <div class="row">
                    <div class="col-md-6 mb-4" t-foreach="patients" t-as="patient">
                        <a t-attf-href="/my/dental/{{ patient.id }}">
                            <div class="card">
                                <div class="card-body d-flex align-items-center">
                                    <img class="ms-3" src="/contacts/static/description/icon.svg" />
                                    <p class="card-title mb-0" t-esc="patient.name" />
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_my_dental_user" name="My Dental Portal User">
        <t t-call="portal.portal_layout">
            <div class="container">
                <div class="row">
                    <div class="col-md-5 order-md-2 mb-4">
                        <a t-attf-href="/my/dental/{{ patient.id }}/personal">
                            <div class="card">
                                <div class="card-body d-flex align-items-center">
                                    <img class="ms-3" src="/sale/static/src/img/bag.svg" />
                                    <p class="card-title mb-0">Personal</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-6 order-md-2 mb-4">
                        <a t-attf-href="/my/dental/{{ patient.id }}/medical_history">
                            <div class="card">
                                <div class="card-body d-flex align-items-center">
                                    <img class="ms-3" src="/account/static/src/img/Bill.svg" />
                                    <p class="card-title mb-0">Medical History</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-5 order-md-2 mb-4">
                        <a t-attf-href="/my/dental/{{ patient.id }}/medical_aid">
                            <div class="card">
                                <div class="card-body d-flex align-items-center">
                                    <img class="ms-3" src="/project/static/src/img/folder.svg" />
                                    <p class="card-title mb-0">Medical Aid</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-6 order-md-2 mb-4">
                        <a t-attf-href="/my/dental/{{ patient.id }}/dental_history">
                            <div class="card">
                                <div class="card-body d-flex align-items-center">
                                    <img class="ms-3" src="/project/static/src/img/tasks.svg" />
                                    <p class="card-title mb-0">Dental History and Next Appointment</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_my_dental_personal" name="My Dental Personal">
        <t t-call="portal.portal_layout">
            <div class="container">
                <h1 class="mb-4 text-center text-primary">Personal Details</h1>
                <form class="bg-light p-4 rounded shadow-sm">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Name</label>
                        <input type="text" class="form-control" t-att-value="patient.name"
                            readonly="readonly" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Gender</label>
                        <input type="text" class="form-control" t-att-value="patient.gender"
                            readonly="readonly" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Date of Birth</label>
                        <input type="text" class="form-control" t-att-value="patient.date_of_birth"
                            readonly="readonly" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Marital Status</label>
                        <input type="text" class="form-control" t-att-value="patient.marital_status"
                            readonly="readonly" />
                    </div>
                </form>
            </div>
        </t>
    </template>

    <template id="portal_my_dental_medical_history" name="My Dental Medical History">
        <t t-call="portal.portal_layout">
            <div class="container mt-5">
                <h1 class="mb-4 text-center text-primary">Medical History</h1>
                <t t-foreach="medical_history" t-as="record">
                    <div class="list-group">
                        <a href="#"
                            class="list-group-item list-group-item-action flex-column align-items-start mb-3 border-primary">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1 text-primary">Patient: <span
                                        t-field="record.patient_id" /></h5>
                                <small class="text-muted">
                                    <span t-field="record.date" />
                                </small>
                            </div>
                            <p class="mb-1">
                                <strong>Consultation Type:</strong>
                                <span t-field="record.consultation_type" />
                            </p>
                            <p class="mb-1">
                                <strong>Company:</strong>
                                <span t-field="record.company_id" />
                            </p>
                        </a>
                    </div>
                </t>
            </div>
        </t>
    </template>

    <template id="portal_my_dental_medical_aid" name="My Dental Medical Aid">
        <t t-call="portal.portal_layout">
            <div class="container mt-5">
                <h1 class="mb-4 text-center text-primary">Medical Aid</h1>
                <form class="bg-white p-4 rounded-lg shadow-lg border border-primary">
                    <div class="mb-4">
                        <label class="form-label text-primary">Name</label>
                        <input type="text" class="form-control form-control-lg"
                            t-att-value="medical_aid.name" readonly="readonly" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-primary">Medical Aid Plan</label>
                        <input type="text" class="form-control form-control-lg"
                            t-att-value="medical_aid.medical_aid_plan" readonly="readonly" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-primary">Medical Aid Number</label>
                        <input type="text" class="form-control form-control-lg"
                            t-att-value="medical_aid.medical_aid_number" readonly="readonly" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-primary">Main Member Code</label>
                        <input type="text" class="form-control form-control-lg"
                            t-att-value="medical_aid.main_member_code" readonly="readonly" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-primary">Dependent Code</label>
                        <input type="text" class="form-control form-control-lg"
                            t-att-value="medical_aid.dependent_code" readonly="readonly" />
                    </div>
                </form>
            </div>
        </t>
    </template>

    <template id="portal_my_dental_dental_history" name="My Dental Dental History">
        <t t-call="portal.portal_layout">
            <div class="container">
                <h1>Dental History and Next Appointment</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Patient</th>
                            <th>Extra Oral observation</th>
                            <th>Habits</th>
                            <th>Treatment notes</th>
                            <th>Consultation type</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="dental_history" t-as="record">
                            <td>
                                <span t-field="record.patient_id" />
                            </td>
                            <td>
                                <span t-field="record.extra_oral_observation" />
                            </td>
                            <td>
                                <span t-field="record.habits" />
                            </td>
                            <td>
                                <span t-field="record.treatment_notes" />
                            </td>
                            <td>
                                <span t-field="record.consultation_type" />
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
</odoo>