<?xml version="1.0"?>
<odoo>
    <record id="view_dental_chronic_condition_tree" model="ir.ui.view">
        <field name="name">dental.chronic.condition.tree</field>
        <field name="model">dental.chronic.condition</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="parent_id" />
            </tree>
        </field>
    </record>
    <record id="view_dental_chronic_condition_form" model="ir.ui.view">
        <field name="name">dental.chronic.condition.form</field>
        <field name="model">dental.chronic.condition</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <div>
                        <field name="parent_id" />
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                    <field name="activity_ids" />
                </div>
            </form>
        </field>
    </record>

    <record id="chronic_condition_action" model="ir.actions.act_window">
        <field name="name">Chronic Condition</field>
        <field name="res_model">dental.chronic.condition</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
