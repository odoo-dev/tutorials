<?xml version="1.0"?>
<odoo>
    <record id="chronic_conditions_menu_action" model="ir.actions.act_window">
        <field name="name">Chronic Conditions</field>
        <field name="res_model">chronic.conditions</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create New Property
            </p>
        </field>
    </record>

    <record id="view_chronic_conditions_tree" model="ir.ui.view">
        <field name="name">chronic.conditions.tree</field>
        <field name="model">chronic.conditions</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name" />
            </tree>
        </field>
    </record>
    
    <record id="view_chronic_conditions_form" model="ir.ui.view">
        <field name="name">chronic.conditions.form</field>
        <field name="model">chronic.conditions</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <field name="parent_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

