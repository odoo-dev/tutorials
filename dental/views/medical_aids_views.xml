<odoo>
    <record id="medical_aids_action" model="ir.actions.act_window">
            <field name="name">Medical Aids</field>
            <field name="res_model">medical.aids</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_state': True, 'search_default_current': True}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a module
                </p>
                <p>
                    Leads are the qualification step before the creation of an opportunity.
                </p>
            </field>
    </record>


    <record id="view_medical_aids_tree" model="ir.ui.view">
		<field name="name">medical.aids.tree</field>
		<field name="model">medical.aids</field>
		<field name="arch" type="xml">
			<tree string="Medical Aids">
                <field name="sequence" widget="handle" />
				<field name="name" />
				<field name="contact" />
				<field name="phone_number" />
				<field name="email" />
                <field name="notes" placeholder="Enter your notes here..." />
			</tree>
		</field>
	</record>

	<record id="view_medical_aids_form" model="ir.ui.view">
		<field name="name">medical.aids.form</field>
		<field name="model">medical.aids</field>
		<field name="arch" type="xml">
			<form string="Patients">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="new,in progress,done" />
                </header>
				<sheet>
                    <h1>
                        <field name="name" />
                    </h1>
                    <group>
                        <group>
                            <field name="contact" />
                            <field name="phone_number" />
                            <field name="email" />
                        </group>
                        <group>
                            <field name="company_id" />
                            <field name="state" />
                        </group>
                            <field name="notes" placeholder="Enter your notes here..." />
                    </group>

				</sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                    <field name="activity_ids" />
                </div>
			</form>
		</field>
	</record>

</odoo>