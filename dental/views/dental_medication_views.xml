<odoo>
    <!-- Action  -->
    <record id="dental_medication_action" model="ir.actions.act_window">
        <field name="name">Medication</field>
        <field name="res_model">dental.medication</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="dental_medication_tree_view" model="ir.ui.view">
        <field name="name">dental.medication.tree</field>
        <field name="model">dental.medication</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="sequence" widget="handle" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="dental_medication_form" model="ir.ui.view">
        <field name="name">dental.medication.form</field>
        <field name="model">dental.medication</field>
        <field name="arch" type="xml">
            <form string="Dental Medication">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                    <field name="activity_ids" />
                </div>
            </form>
        </field>
    </record>


    <record id="dental_medication_search" model="ir.ui.view">
        <field name="name">dental.medication.search</field>
        <field name="model">dental.medication</field>
        <field name="arch" type="xml">
            <search string="Dental Medication">
                <field name="name" />
            </search>
        </field>
    </record>
</odoo>