<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View for Dental Patient History -->
    <record id="dental_patient_history_tree" model="ir.ui.view">
        <field name="name">dental.patient.history.tree</field>
        <field name="model">patient.history</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date" />
                <field name="name" string="Display Name" />
                <field name="description" string="Description" />
                <field name="tags" />
            </tree>
        </field>
    </record>

    <!-- Form View for Dental Patient History -->
    <record id="dental_patient_history_form" model="ir.ui.view">
        <field name="name">dental.patient.history.form</field>
        <field name="model">patient.history</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="name" placeholder="Name..." />
                    </h1>
                    <group string="Billing">
                        <group>
                            <field name="patient_id"></field>
                            <field name="date" />
                            <field name="attend" />
                        </group>
                        <group>
                            <field name="responsible" />
                            <field name="tags" />
                            <field name="company" />
                        </group>
                    </group>
                    <group>
                        <group string="Teeth History">
                            <field name="main_complaint" />
                            <field name="x_ray1" widget="image" />
                            <field name="habits" />
                            <field name="alligner_file1" />
                        </group>
                        <group string="Teeth History">
                            <field name="history" />
                            <field name="x_ray2" widget="image" />
                            <field name="extra_oral_observation" />
                            <field name="alligner_file2" />
                        </group>
                    </group>
                    <group string="Tooth Chart">
                        <group string="Upper">
                            <strong>
                                <div>
                                    <div>18</div>
                                    <div class="pt-3">17</div>
                                    <div class="pt-3">16</div>
                                    <div class="pt-3">15</div>
