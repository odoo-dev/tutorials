<odoo>

    <record id="pateint_action" model="ir.actions.act_window">
            <field name="name">Pateints</field>
            <field name="res_model">dental.patients</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'search_default_state': True, 'search_default_current': True}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a module
                </p>
                <p>
                    Leads are the qualification step before the creation of an opportunity.
                </p>
            </field>
    </record>

    <record id="view_pateint_tree" model="ir.ui.view">
		<field name="name">dental.patients.tree</field>
		<field name="model">dental.patients</field>
		<field name="arch" type="xml">
			<tree string="Patients">
				<field name="sequence" widget="handle" />
				<field name="name" />
                <field name="state"/>
			</tree>
		</field>
	</record>

	<record id="view_pateint_form" model="ir.ui.view">
		<field name="name">dental.patients.form</field>
		<field name="model">dental.patients</field>
		<field name="arch" type="xml">
			<form string="Patients">
				<header>
                    <field name="state" widget="statusbar" statusbar_visible="new,to do today,done,to invoice" options='{"clickable":"1"}'  />
				  <button name="action_open_invoice" string="invoice"  type="object"/>
                </header>
				
				<sheet>
					<div>
						<h1>
							<field name="name" placeholder="Name.."/>
						</h1>
						<field name="image" widget="image" class="oe_avatar"/>
					</div>
					<group>
                    <field name="state"/>
						<field name="history_id"/>
					</group>
					<notebook>
						<page string="Medical">
							<group>
								<group>
										<field name="gp_name" />
										<field name="gp_phone" />
										<field name="chronic_ids"  widget="many2many_tags"/>
										<field name="hospitalised_this_year" string="Hospitalised This Year"/>
										<field name="medication"  widget="many2many_tags"/>
								</group>
								<group>
										<field name="aleergies_ids"  widget="many2many_tags"/>
										<field name="habits_ids"  widget="many2many_tags"/>
										<field name="under_special_care"  />
										<field name="psychiatric_history"  />
								</group>
								<group string="FEMALE" invisible="gender != 'female'">
									<field name="are_you_pregnant"/>
									<field name="are_you_nursing"/>
									<field name="are_you_on" />
								</group>
								
							</group>
						</page>
						<page string="Medical Aid">
							<group>
								<group>
									<field name="medical_aid_id" />
									<field name="medical_aid_plan" />
									<field name="medical_aid_number" />
								</group>
								<group>
									<field name="main_member_code" />
									<field name="dependant_code" />
								</group>
							</group>
						</page>
						<page string="History">
							<field name="history_id"/>
						</page>
						<page string="Patient Details">
							<group>
								<group string="NEXT OF KIN">
									<group>
										<field name="phone_number"/>
									</group>
								</group>
								<group string="PATIENT DETAILS">
										<field name="occupation_or_grade"/>
										<field name="identity_number"/>
										<field name="date_of_birth"/>
										<field name="gender"/>
										<field name="marital_status"  />
								</group>
								<group string="CONSENT FORM">
								</group>
							</group>
						</page>
						<page string="Gurantor Details">
							<group>
								<group string="GURANTOR">
									<field name="guarantor_id" />
									<field name="guarantor_phone"/>
									<field name="guarantor_email"/>
								</group>
								<group string="OFFICE USE">
									<field name="guarantor_company"/>
									<field name="guarantor_tags"  widget="many2many_tags" />
								</group>
							</group>
							
						</page>
					</notebook>
					<field name="notes" placeholder="Enter your notes here..." />
				</sheet>
				<div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                    <field name="activity_ids" />
                </div>
			</form>
		</field>
	</record>

	<record id="view_pateint_kanban" model="ir.ui.view">
		<field name="name">dental.patients.kanban</field>
		<field name="model">dental.patients</field>
		<field name="arch" type="xml">
			<kanban  default_group_by="state">
				<field name="state"/>
				<templates>
					<t t-name="kanban-box">
						<div class="oe_kanban_global_click">
							<div class="row">
								<div class="col-12">
									<div class="image-container">
										<field name="image" widget="image"  class="oe_avatar" style="height: 70px; width: 70px; object-fit: cover;"/>
									</div>
									<strong>
										<field name="name"/>
									</strong>
								</div>
							</div>
						</div>
					</t>
				</templates>
			</kanban>
		</field>
	</record>
	
</odoo>
