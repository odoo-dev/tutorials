<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="dental_chronic_conditions_actions" model="ir.actions.act_window">
        <field name="name">Chronic Conditions</field>
        <field name="res_model">dental.chronic.conditions</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face"> Create a chronic condition</p>
        </field>
    </record>

    <record id="dental_chronic_conditions_tree" model="ir.ui.view">
        <field name="name">dental.chronic.conditions.tree</field>
        <field name="model">dental.chronic.conditions</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
</odoo>
