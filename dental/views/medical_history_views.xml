<?xml version="1.0"?>
<odoo>
    <record id="action_medical_history" model="ir.actions.act_window">
        <field name="name">Medical History</field>
        <field name="res_model">medical.history</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_medical_history_tree" model="ir.ui.view">
        <field name="name">medical.history.tree</field>
        <field name="model">medical.history</field>
        <field name="arch" type="xml">
            <tree string="Medical History">
                <field name="date" />
                <field name="name" />
                <field name="main_complaint" string="Description" />
                <field name="tag_ids" />
            </tree>
        </field>
    </record>

    <odoo>
        <record id="view_medical_history_form" model="ir.ui.view">
            <field name="name">medical.history.form</field>
            <field name="model">medical.history</field>
            <field name="arch" type="xml">
                <form string="Medical History">
                    <group>
                        <field name="name" />
                    </group>
                    <sheet>
                        <group string="Billing">
                            <group>
                                <field name="patient_id" required="1" />
                                <field name="date" required="1" />
                                <field name="did_not_attend" />
                            </group>
                            <group>
                                <field name="company_id" />
                                <field name="tag_ids" />
                                <field name="responsible" />
                            </group>
                        </group>
                        <group>
                            <group string="Teeth History">
                                <field name="main_complaint" />
                                <field name="xray_file1" widget="image" />
                                <field name="habits" />
                                <field name="aligner_file1" />
                            </group>
                            <group string="Teeth History">
                                <field name="history" />
                                <field name="xray_file2" widget="image" />
                                <field name="extra_observation" />
                                <field name="aligner_file2" />
                            </group>
                        </group>
                        <group string="Tooth chart">
                            <group string="Upper">
                                <field name="upper_18" string="18"/>
                                <field name="upper_17" string="17"/>
                                <field name="upper_16" string="16"/>
                                <field name="upper_15" string="15"/>
                                <field name="upper_14" string="14"/>
                                <field name="upper_13" string="13"/>
                                <field name="upper_12" string="12"/>
                                <field name="upper_11" string="11"/>
                                <field name="upper_28" string="28"/>
                                <field name="upper_27" string="27"/>
                                <field name="upper_26" string="26"/>
                                <field name="upper_25" string="25"/>
                                <field name="upper_24" string="24"/>
                                <field name="upper_23" string="23"/>
                                <field name="upper_22" string="22"/>
                                <field name="upper_21" string="21"/>
                            </group>
                            <group string="Lower">
                                <field name="lower_38" string="38"/>
                                <field name="lower_37" string="37"/>
                                <field name="lower_36" string="36"/>
                                <field name="lower_35" string="35"/>
                                <field name="lower_34" string="34"/>
                                <field name="lower_33" string="33"/>
                                <field name="lower_32" string="32"/>
                                <field name="lower_31" string="31"/>
                                <field name="lower_48" string="48"/>
                                <field name="lower_47" string="47"/>
                                <field name="lower_46" string="46"/>
                                <field name="lower_45" string="45"/>
                                <field name="lower_44" string="44"/>
                                <field name="lower_43" string="43"/>
                                <field name="lower_42" string="42"/>
                                <field name="lower_41" string="41"/>
                            </group>
                        </group>
                        <group string="Treatment notes">
                            <field name="treatment_notes" widget="text" />
                        </group>
                        <group string="Billing">
                            <field name="consultation_type" widget="selection" />
                            <field name="call_out" widget="boolean" />
                            <field name="scale_and_polish" widget="boolean" />
                            <field name="fluoride" widget="boolean" />
                            <field name="filling_description" widget="text" />
                            <field name="aligner_delivery" widget="boolean" />
                            <field name="whitening" widget="boolean" />
                            <field name="fissure_sealant_qty" widget="float" />
                            <field name="attachments_removed" widget="boolean" />
                            <field name="aligner_followup_scan" widget="boolean" />
                            <field name="other_notes" widget="text" />
                        </group>

                        <div>
                            <field name="notes" placeholder="Type down your notes here" />
                        </div>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="message_ids" />
                        <field name="activity_ids" />
                    </div>
                </form>
            </field>
        </record>
    </odoo>
</odoo>