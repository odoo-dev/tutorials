<?xml version="1.0"?>
<odoo>
    <record id="view_dental_medication_tree" model="ir.ui.view">
        <field name="name">dental.medication.tree</field>
        <field name="model">dental.medication</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="view_dental_medication_form" model="ir.ui.view">
        <field name="name">dental.medication.form</field>
        <field name="model">dental.medication</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="medication_action" model="ir.actions.act_window">
        <field name="name">Medication</field>
        <field name="res_model">dental.medication</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>