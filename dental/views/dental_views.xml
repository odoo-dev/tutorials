<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dental views For module and the first menu -->
    <record id="action_dental_patient_view" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">dental.patient</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data found!
            </p>
            <p>
                Use this menu to have an overview of your Pipeline.
            </p>
        </field>
    </record>

    <!-- Record Action for the Medical Aids View -->

    <record id="action_medical_aids_view" model="ir.actions.act_window">
        <field name="name">Medical Help</field>
        <field name="res_model">medical.aids</field>
        <field name="view_mode">tree,form</field>

    </record>
    <!--  Record Action for all the three items of Medical Symptoms  -->
    <record id="action_medical_aids_chronic" model="ir.actions.act_window">
        <field name="name">Chronic Conditions</field>
        <field name="res_model">chronic.condition</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_medical_aids_allergies" model="ir.actions.act_window">
        <field name="name">Allergies</field>
        <field name="res_model">allergies</field>
        <field name="view_mode">tree,form</field>

    </record>

    <record id="action_medical_aids_habits" model="ir.actions.act_window">
        <field name="name">Habits </field>
        <field name="res_model">habits</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Record Action for  Medicaton  -->
    <record id="action_medical_medications" model="ir.actions.act_window">
        <field name="name">Medication </field>
        <field name="res_model">medication</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>