<?xml version="1.0"?>
<odoo>
    <record id="dental_patient_action" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">dental.patient</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create New Property
            </p>
        </field>
    </record>

    <record id="view_dental_patient_tree" model="ir.ui.view">
        <field name="name">dental.patient.tree</field>
        <field name="model">dental.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="view_dental_patient_kanban" model="ir.ui.view">
        <field name="name">dental.patient.kanban</field>
        <field name="model">dental.patient</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" sortable="True" quick_create="False">
                <field name="stage_id" invisible="1" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img
                                    t-attf-src="#{kanban_image('dental.patient', 'image', record.id.raw_value)}"
                                    role="img" t-att-alt="record.id.value" />
                            </div>
                            <div>
                                <strong>
                                    <field name="name" />
                                </strong>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_dental_patient_form" model="ir.ui.view">
        <field name="name">dental.patient.form</field>
        <field name="model">dental.patient</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="book_invoice_button" type="object" string="Invoice" invisible="stage_id.name == 'To Invoice'"/>
                    <button name="book_appointment_button" type="object" string="Book Appointment" />
                    <field name="stage_id" widget="statusbar" options="{'clickable': '1'}" />
                </header>
                <sheet>
                    <group>
                        <field name="name" class="oe-title" />
                    </group>
                    <group>
                        <field name="medical_history_ids" string="History" />
                    </group>
                    <notebook>
                        <page string="Medical">
                            <group>
                                <group>
                                    <field name="doctor_id" />
                                    <field name="doc_phone_number" widget="phone" />
                                    <field name="chronic_conditions_ids" widget="many2many_tags" />
                                    <field name="hospitalized" />
                                    <field name="medication_ids" widget="many2many_tags" />
                                </group>
                                <group>
                                    <field name="allergies_ids" widget="many2many_tags" />
                                    <field name="habits_substance_ids" widget="many2many_tags" />
                                    <field name="specialized_care" />
                                    <field name="psychiatric_history" />
                                </group>
                                <group string="FEMALE" invisible="gender != 'female'">
                                    <field name="pregnant" />
                                    <field name="nursing" />
                                    <field name="hormone" />
                                </group>
                            </group>
                            <div>
                                <field name="notes" placeholder="Type down your notes here" />
                            </div>
                        </page>

                        <page string="Medical Aid">
                            <group>
                                <group>
                                    <field name="insurance_id" string="Medical Aid" />
                                    <field name="medical_aids_plan" />
                                    <field name="medical_aids_number" />
                                </group>
                                <group>
                                    <field name="main_member_code" />
                                    <field name="depedent_code" />
                                </group>
                            </group>
                            <div>
                                <field name="notes" placeholder="Type down your notes here" />
                            </div>
                        </page>

                        <page string="History">
                            <field name="medical_history_ids" string="History" />
                        </page>

                        <page string="Patient Details">
                            <group>
                                <group string="Next of Kin">
                                    <field name="emergency_contact_id" />
                                    <field name="emergency_contact_phone" />
                                </group>
                                <group string="Patient details">
                                    <field name="company_id" />
                                    <field name="occupation" />
                                    <field name="identity_num" />
                                    <field name="birthdate" />
                                    <field name="gender" />
                                    <field name="maritial_status" />
                                </group>
                                <group string="Consent Form">
                                    <field name="consent_signature" widget="signature" />
                                    <field name="consent_date" />
                                </group>
                            </group>
                            <div>
                                <field name="notes" placeholder="Type down your notes here" />
                            </div>
                        </page>

                        <page string="Guarantor">
                            <group>
                                <group>
                                    <field name="guarantor_id" />
                                    <field name="guarantor_phone" />
                                    <field name="phone" />
                                    <field name="guarantor_email" />
                                </group>
                                <group>
                                    <field name="guarantor_company" />
                                    <field name="tag_ids" widget="many2many_tags" />
                                </group>
                            </group>
                            <div>
                                <field name="notes" placeholder="Type down your notes here" />
                            </div>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                    <field name="activity_ids" />
                </div>
            </form>
        </field>
    </record>

</odoo>