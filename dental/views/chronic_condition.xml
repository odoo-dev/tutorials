<odoo>
    <record id="chronic_condition_action" model="ir.actions.act_window">
            <field name="name">Chronic Condition</field>
            <field name="res_model">chronic.condition</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a module
                </p>
                <p>
                    Leads are the qualification step before the creation of an opportunity.
                </p>
            </field>
    </record>


    <record id="view_chronic_condition_tree" model="ir.ui.view">
		<field name="name">chronic.condition.tree</field>
		<field name="model">chronic.condition</field>
		<field name="arch" type="xml">
			<tree string="Chronic Condition">
                <field name="sequence" widget="handle" />
				<field name="name" />
			</tree>
		</field>
	</record>

	<record id="view_chronic_condition_form" model="ir.ui.view">
		<field name="name">chronic.condition.form</field>
		<field name="model">chronic.condition</field>
		<field name="arch" type="xml">
			<form string="Chronic Condition">
                <sheet>
                    <h1>
                        <field name="name" />
                    </h1>
                    <field name="description" />
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                    <field name="activity_ids" />
                </div>
			</form>
		</field>
	</record>

</odoo>