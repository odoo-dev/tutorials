<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="portal_my_home_extended" name="My Portal Extended"
        inherit_id="portal.portal_my_home">
        <xpath expr="//div[@id='portal_common_category']" position="after">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/dental/static/Description/dental.png'" />
                <t t-set="title">Dental</t>
                <t t-set="text">Manage your dental records and appointments</t>
                <t t-set="url" t-value="'/my/dental'" />
                <t t-set="config_card" t-value="True" />
            </t>
        </xpath>
    </template>

    <template id="portal_my_dental" name="My Dental Portal">
        <t t-call="portal.portal_layout">
            <t t-set="title">Dental</t>
            <div class="container">
                <h1>Dental</h1>
                <div class="row">
                    <div class="col-md-6 mb-4" t-foreach="users" t-as="user">
                        <a t-attf-href="/my/dental/{{ user.id }}">
                            <div class="card">
                                <div class="card-body d-flex align-items-center">
                                    <img class="ms-3 img img-fluid" src="/contacts/static/description/icon.svg" />
                                    <p class="card-title mb-0" t-esc="user.name" />
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_my_dental_user" name="Patient details">
        <t t-call="portal.portal_layout">
            <div class="container">
                <div class="row">
                    <div class="col-md-5 order-md-2 mb-4">
                        <a t-attf-href="/my/dental/{{ patient.id }}/personal">
                            <div class="card">
                                <div class="card-body d-flex align-items-center">
                                    <img class="ms-3 img img-fluid" src="/sale/static/src/img/bag.svg" />
                                    <p class="card-title mb-0">Personal</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-6 order-md-2 mb-4">
                        <a t-attf-href="/my/dental/{{ patient.id }}/medical_history">
                            <div class="card">
                                <div class="card-body d-flex align-items-center">
                                    <img class="ms-3 img img-fluid" src="/account/static/src/img/Bill.svg" />
                                    <p class="card-title mb-0">Medical History</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-5 order-md-2 mb-4">
                        <a t-attf-href="/my/dental/{{ patient.id }}/medical_aid">
                            <div class="card">
                                <div class="card-body d-flex align-items-center">
                                    <img class="ms-3 img img-fluid" src="/project/static/src/img/folder.svg" />
                                    <p class="card-title mb-0">Medical Aid</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-6 order-md-2 mb-4">
                        <a t-attf-href="/my/dental/{{ patient.id }}/dental_history">
                            <div class="card">
                                <div class="card-body d-flex align-items-center">
                                    <img class="ms-3 img img-fluid" src="/project/static/src/img/tasks.svg" />
                                    <p class="card-title mb-0">Dental History and Next Appointment</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_my_dental_personal" name="My Dental Personal">
        <t t-call="portal.portal_layout">
            <div class="container text-center">
                <h1>Personal Details</h1>
                <div>
                    <t t-foreach="patient" t-as="patient">
                        <div class="card">
                            <div class="card-body align-items-center">
                                <img class="ms-3 img img-fluid" src="patient.image" />
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Company</th>
                                            <th>Gender</th>
                                            <th>BirthDate</th>
                                            <th>Marital Status</th>
                                            <th>Occupation</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <td>
                                            <span t-field="patient.name" />
                                        </td>
                                        <td>
                                            <span t-field="patient.company_id" />
                                        </td>
                                        <td>
                                            <span t-field="patient.gender" />
                                        </td>
                                        <td>
                                            <span t-field="patient.birthdate" />
                                        </td>
                                        <td>
                                            <span t-field="patient.maritial_status" />
                                        </td>
                                        <td>
                                            <span t-field="patient.occupation" />
                                        </td>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_my_dental_medical_history" name="Medical History">
        <t t-call="portal.portal_layout">
            <div class="container text-center">
                <h1>Medical History</h1>
                <div>

                    <div class="card">
                        <div class="card-body align-items-center">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Date</th>
                                        <th>Attendance</th>
                                        <th>Main Complaint</th>
                                        <th>Company</th>
                                        <th>Consultation Type</th>
                                    </tr>
                                </thead>
                                <t t-foreach="medical_historys" t-as="medical_history">
                                    <tbody>
                                        <td>
                                            <span t-field="medical_history.name" />
                                        </td>
                                        <td>
                                            <span t-field="medical_history.date" />
                                        </td>
                                        <td>
                                            <span t-field="medical_history.did_not_attend" />
                                        </td>
                                        <td>
                                            <span t-field="medical_history.company_id" />
                                        </td>
                                        <td>
                                            <span t-field="medical_history.consultation_type" />
                                        </td>
                                    </tbody>
                                </t>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_my_dental_medical_aid" name="Medical Aid">
        <t t-call="portal.portal_layout">
            <div class="container text-center">
                <h1>Medical Aid</h1>
                <div>
                    <t t-foreach="medical_aid" t-as="medical_aid">
                        <div class="card">
                            <div class="card-body align-items-center">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Contact</th>
                                            <th>Email</th>
                                            <th>Company</th>
                                            <th>Phone</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <td>
                                            <span t-field="medical_aid.name" />
                                        </td>
                                        <td>
                                            <span t-field="medical_aid.partner_id" />
                                        </td>
                                        <td>
                                            <span t-field="medical_aid.email_address" />
                                        </td>
                                        <td>
                                            <span t-field="medical_aid.company_id" />
                                        </td>
                                        <td>
                                            <span t-field="medical_aid.phone_number" />
                                        </td>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_my_dental_dental_history" name="Dental History">
        <t t-call="portal.portal_layout">
            <div class="container text-center">
                <h1>Dental History</h1>
                <div>
                </div>
            </div>
        </t>
    </template>
</odoo>