<odoo>
    <template id="portal_my_home_extended" name="My Portal Extended" inherit_id="portal.portal_my_home">
        <xpath expr="//div[@id='portal_common_category']" position="before">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/dental/static/description/tooth.png'"/>
                <t t-set="title">Dental</t>
                <t t-set="text">Manage your dental records and appointments</t>
                <t t-set="url" t-value="'/my/dental'"/>
                <t t-set="config_card" t-value="True"/>
            </t>
        </xpath>
    </template>

    <template id="portal_my_dental" name="My Dental Portal">
        <t t-call="portal.portal_layout">
            <t t-set="title">Dental</t>
            <div class="container">
                <h1>Dental</h1>
                <div class="row">
                    <div class="col-md-6 mb-4" t-foreach="patients" t-as="patient">
                        <a t-attf-href="/my/dental/{{ patient.id }}">
                            <div class="card">
                                <div class="card-body d-flex align-items-center">
                                    <img class="ms-3" src="/contacts/static/description/icon.svg"/>
                                    <p class="card-title mb-0" t-esc="patient.name"/>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_my_dental_user" name="My Dental Portal User">
        <t t-call="portal.portal_layout">
            <div class="container">
                <div class="row">
                    <div class="col-md-5 order-md-2 mb-4">
                        <a t-attf-href="/my/dental/{{ patient.id }}/personal">
                            <div class="card">
                                <div class="card-body d-flex align-items-center">
                                    <img class="ms-3" src="/sale/static/src/img/bag.svg"/>
                                    <p class="card-title mb-0">Personal</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-6 order-md-2 mb-4">
                        <a t-attf-href="/my/dental/{{ patient.id }}/medical_history">
                            <div class="card">
                                <div class="card-body d-flex align-items-center">
                                    <img class="ms-3" src="/account/static/src/img/Bill.svg"/>
                                    <p class="card-title mb-0">Medical History</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-5 order-md-2 mb-4">
                        <a t-attf-href="/my/dental/{{ patient.id }}/medical_aid">
                            <div class="card">
                                <div class="card-body d-flex align-items-center">
                                    <img class="ms-3" src="/project/static/src/img/folder.svg"/>
                                    <p class="card-title mb-0">Medical Aid</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-6 order-md-2 mb-4">
                        <a t-attf-href="/my/dental/{{ patient.id }}/dental_history">
                            <div class="card">
                                <div class="card-body d-flex align-items-center">
                                    <img class="ms-3" src="/project/static/src/img/tasks.svg"/>
                                    <p class="card-title mb-0">Dental History and Next Appointment</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_my_dental_personal" name="My Dental Personal Form">
        <t t-call="portal.portal_layout">
            <div class="container">
                <h1>Personal Details</h1>
                <form>
                    <div class="form-control row">
                        <label class="col-sm-2 col-form-label">Name:</label>
                        <div class="col-sm-10">
                            <span t-field="patient.name" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-control row">
                        <label class="col-sm-2 col-form-label">Gender:</label>
                        <div class="col-sm-10">
                            <span t-field="patient.gender" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-control row">
                        <label class="col-sm-2 col-form-label">Marital Status:</label>
                        <div class="col-sm-10">
                            <span t-field="patient.marital_status" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-control row">
                        <label class="col-sm-2 col-form-label">Date of Birth:</label>
                        <div class="col-sm-10">
                            <span t-field="patient.date_of_birth" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-control row">
                        <label class="col-sm-2 col-form-label">Company:</label>
                        <div class="col-sm-10">
                            <span t-field="patient.company_or_school_id" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-control row">
                        <label class="col-sm-2 col-form-label">Occupation:</label>
                        <div class="col-sm-10">
                            <span t-field="patient.occupation_or_grade" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-control row">
                        <label class="col-sm-2 col-form-label">Identity Number:</label>
                        <div class="col-sm-10">
                            <span t-field="patient.identity_number" class="form-control"/>
                        </div>
                    </div>
                </form>
            </div>
        </t>
    </template>

    <template id="portal_my_dental_medical_history" name="My Dental Medical History">
        <t t-call="portal.portal_layout">
            <div class="container">
                <h1>Medical History</h1>
                <div>
                    <t t-foreach="history" t-as="history">
                    <div class="card-body">
                        <p><strong>Patient: </strong> <span t-esc="history.patient_id.name"/></p>
                        <p><strong>Date: </strong> <span t-esc="history.date"/></p>
                        <p><strong>Responsible: </strong> <span t-esc="history.responsible_id.name"/></p>
                        <p><strong>Did not attend: </strong> <span t-esc="history.did_not_attend"/></p>
                        <p><strong>Company: </strong> <span t-esc="history.company_id.name"/></p>
                    </div>
                    </t>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_my_dental_medical_aid" name="My Dental Medical Aid Form">
        <t t-call="portal.portal_layout">
            <div class="container mt-4">
                <h1 class="mb-4">Medical Aid Information</h1>
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h4 class="card-title">Patient's Medical Aid Details</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-control row">
                            <label class="col-md-3 col-form-label"><strong>Medical Aid Name:</strong></label>
                            <div class="col-md-9">
                                <span class="form-control-static" t-field="patient.medical_aids"/>
                            </div>
                        </div>
                        <div class="form-control row">
                            <label class="col-md-3 col-form-label"><strong>Medical Aid Plan:</strong></label>
                            <div class="col-md-9">
                                <span class="form-control-static" t-field="patient.medical_aids_plan"/>
                            </div>
                        </div>
                        <div class="form-control row">
                            <label class="col-md-3 col-form-label"><strong>Medical Aid Number:</strong></label>
                            <div class="col-md-9">
                                <span class="form-control-static" t-field="patient.medical_aid_number"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_my_dental_dental_history" name="My Dental Dental History">
        <t t-call="portal.portal_layout">
            <div class="container my-4">
                <h1 class="mb-4 text-center">Dental History and Next Appointment</h1>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Main Complaint</th>
                            <th>Responsible</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="history" t-as="history">
                            <tr>
                                <td>
                                    <a t-attf-href="/my/dental/{{ history.patient_id.id }}/dental_history/{{ history.id }}"><span t-field="history.name"/></a>
                                </td>
                                <td>
                                    <span t-field="history.main_complaint"/>
                                </td>
                                <td>
                                    <span t-field="history.responsible_id"/>
                                </td>
                                <td>
                                    <span t-field="history.date"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>

    <template id="portal_my_dental_dental_history_detail" name="My Dental Dental History Form">
        <t t-call="portal.portal_layout">
            <div class="container my-5">
                <h1 class="text-center text-primary mb-4">Dental History and Next Appointment</h1>
                <div class="card shadow-sm border-0 rounded">
                    <div class="card-body bg-light">
                        <div class="mb-3">
                            <label class="form-label"><strong>Main Complaint:</strong></label>
                            <p class="form-control border-0 bg-white px-3 py-2 rounded shadow-sm" t-esc="medical_history.main_complaint"></p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><strong>History:</strong></label>
                            <p class="form-control border-0 bg-white px-3 py-2 rounded shadow-sm" t-esc="medical_history.teeth_history"></p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><strong>Habits:</strong></label>
                            <p class="form-control border-0 bg-white px-3 py-2 rounded shadow-sm" t-esc="medical_history.habits"></p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><strong>X-ray File 1:</strong></label>
                            <img t-if="medical_history.xray_file_1" class="img-fluid mb-3 rounded shadow-sm" 
                                 t-att-src="'data:image/png;base64,%s' % medical_history.xray_file_1" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><strong>X-ray File 2:</strong></label>
                            <img t-if="medical_history.xray_file_2" class="img-fluid mb-3 rounded shadow-sm" 
                                 t-att-src="'data:image/png;base64,%s' % medical_history.xray_file_2" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><strong>Extra-Oral Observation:</strong></label>
                            <p class="form-control border-0 bg-white px-3 py-2 rounded shadow-sm" t-esc="medical_history.extra_oral_observation"></p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><strong>Clear Aligner File 1:</strong></label>
                            <img t-if="medical_history.clear_align_file_1" class="img-fluid mb-3 rounded shadow-sm" 
                                 t-att-src="'data:image/png;base64,%s' % medical_history.clear_align_file_1" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><strong>Clear Aligner File 2:</strong></label>
                            <img t-if="medical_history.clear_align_file_2" class="img-fluid mb-3 rounded shadow-sm" 
                                 t-att-src="'data:image/png;base64,%s' % medical_history.clear_align_file_2" />
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
