<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sub_products_wizard_action" model="ir.actions.act_window">
        <field name="res_model">sub.product.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_name': context.get('product_name')}</field>
    </record>

    <record id="sub_product_wizard_view_form" model="ir.ui.view">
        <field name="name">sub.product.wizard.view.form</field>
        <field name="model">sub.product.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <h2>
                        Product: <field name="name" readonly="1" />
                    </h2>
                </header>
                <sheet>
                    <field name="sub_product_ids">
                        <tree editable="bottom" create="0">
                            <field name="product_id"  readonly='1'/>
                            <field name="quantity" />
                            <field name="price" />
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button string="Add Sub-Products" name="add_sub_products_to_order_line" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
